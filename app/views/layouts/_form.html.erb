<h1> <%= action_name %> </h1>


<% if model_name.errors.any? %>
  <ul class="errors">
    <% model_name.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: model_name, class: "form-group", local: true do |f|%>
  <%= form_description %>

<!-- change form labels to match input to edit -->
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :category %>
  <%= f.text_field :category, class: "form-control" %>

  <%= f.label :year %>
  <%= f.text_field :year, class: "form-control" %>

  <%= f.label :creator %>
  <%= f.text_field :creator, class: "form-control"%>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>


  <%= f.submit button_title, class: "btn btn-primary" %>
<% end %>
