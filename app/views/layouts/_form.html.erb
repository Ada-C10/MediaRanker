<h1> <%= action_name %> </h1>


<%= form_with model: model_name, local: true do |f|%>

<p>  <%= form_description %> </p>

<!-- change form labels to match input to edit -->
<section class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</section>

<section class="form-group">
  <%= f.label :category %>
  <%= f.select :category, Category.category_list, class: "form-control" %>
</section>

<section class="form-group">
  <%= f.label :year %>
  <%= f.text_field :year, class: "form-control" %>
</section>

<section class="form-group">
  <%= f.label :creator %>
  <%= f.text_field :creator, class: "form-control" %>
</section>

<section class="form-group">
  <%= f.label :description  %>
  <%= f.text_field :description, class: "form-control" %>
</section>

  <% if @current_user %>
    <%= f.submit button_title, class: "btn btn-primary" %>
     <% else %>
    <%= f.submit button_title, class: "btn btn-primary", disabled: true %>
  <% end %>

<% end %>
