<% if model.errors.messages.any? %>
  <section class="form-errors">
    <p>There were some problems. Please fix them.</p>
    <ul>
      <% model.errors.messages.each do |field, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <strong><%= field %></strong>
            <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>
