<% if model.errors.messages.any? %>
  <section class="alert-warning">
    <p>A problem occurred. Could not create <%=model.category%></p>
    <ul>
      <% model.errors.messages.each do |field, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <strong><%= field %></strong>
            <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>
