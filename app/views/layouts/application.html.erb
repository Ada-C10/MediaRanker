<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <h1>Media Ranker</h1>
    <section class="flash">
        <%flash.each do |name, message|%>
        <% if message.class == Array %>
          <%message.each do |msg|%>
            <div class="alert-warning">
              <strong> <%= "#{name}:" %> </strong> <%= " #{msg}"%> </div>
          <%end%>
        <%else%>
          <div class="alert-warning">
             <%=message %>
           </div>
        <%end%>
      <%end%>
      </section>
  </header>

    <nav>
      <ul>
        <li>
          <%= link_to "HOME", root_path %>
        </li>
        <li>
          <%= link_to "NEW", new_work_path %>
        </li>
        <li>
          <%= link_to "LOG IN" %>
        </li>
        <li>
          <%= link_to "EVERYTHING" %>
        </li>
        <li>
          <%= link_to "TOP TEN" %>
        </li>
        <li>
          <%= link_to "RANDOM!" %>
        </li>
      </ul>

    </nav>
    <%= yield %>
  </body>
</html>
