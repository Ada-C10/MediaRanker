<!DOCTYPE html>
<html>
<head>
  <title>MediaRanker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <nav>
      <ul>
        <li><%= link_to "View top media", root_path%></li>
        <li><%= link_to "View all media", works_path%></li>
        <li><%= link_to "Add a new work", new_work_path%></li>
        <li><%= link_to "View all users", users_path%></li>
      </ul>

      <ul>
        <% if @current_user %>
        <li><%= link_to "Logged in as #{@current_user.name}", user_path(@current_user.id) %></li>
        <li><%= link_to "Log Out", logout_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </header>

  <section class="flash">
    <% flash.each do |name, message| %>

    <% if message.class == Array %>

    <% message.each do |msg| %>
    <div class="alert-warning">
    <%= "#{name}: #{msg}" %></div>
    <% end %>
    <% else %>
    <div class="alert-warning">
      <%= message %></div>
    <% end %>
    <% end %>
  </section>

  <%= yield %>
</body>
</html>
