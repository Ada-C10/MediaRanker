<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="app-header__header">
        <h1>
          <a href="/">Media Ranker</a>
          <small>Ranking the Best of Everything</small>
        </h1>

        <nav class="app-header__nav">
          <ul class="nav app-header__site-nav-container">
            <li class="nav-item app-header__nav_item">
            <li class="nav-link" ><%=link_to "View top media", root_path%></li>
            </li>
            <li class="nav-item app-header__nav_item">
              <li class="nav-link" ><%=link_to "View all media", works_path%></li>
            </li>
            <li class="nav-item app-header__nav_item">
              <li class="nav-link" ><%=link_to "Add a new work", new_work_path%></li>
            </li>
            <li class="nav-item app-header__nav_item">
              <li class="nav-link" ><%=link_to "View all users", users_path, class: "nav-link"%></li>
            </li>
          </ul>
          <ul class="nav app-header__user-nav-container">

            <li class="nav-item app-header__nav_item">
              <% if session[:user_id] %>
              <li class="btn btn-primary"><%= link_to "Log Out", user_path(session[:user_id]), method: :delete %></li>
              <% elsif %>
              <li class="btn btn-primary"><%= link_to "Login", new_user_path%></li>
              <% end %>
            </li>


          </ul>
        </nav>
      </header>

    <header>
      <section class="flash">
      <% flash.each do |name, message| %>
        <% if message.class == Array %>
          <% message.each do |msg| %>
          <p><strong><% "#{name}: #{msg}" %></strong><p>
          <% end %>
        <% else %>
          <div class="alert alert-warning">
            <% message %>
          </div>
        <% end %>
      <% end %>

      <% if @current_user %>
      <h2>Welcome <%= @current_user.username %></h2>
      <%end%>

  </header>




    <%= yield %>
  </body>
</html>
