<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <h1>Media Ranker</h1>


    <%= link_to "(View Top Works/MainPage)", votes_path %>
    <%= link_to "(View All Works)", works_path %>
    <%= link_to "(Add A New Work)", new_work_path %>
    <%= link_to "(View All Users)", users_path %>

    <section class="flash-messages">
    <% flash.each do |key, message| %>
      <p class="<%= key %>">
        <%= message %>
      </p>
    <% end %>
    </section>

  </header>

  <section class="login-info">
  <!-- Oh gosh this logic should probably be in a controller filter -->
  <% logged_in_user = User.find_by(id: session[:user_id]) %>
  <% if logged_in_user %>
    <p>
      Currently logged in as user
      <%= logged_in_user.name %>
      <%= link_to "Log out", logout_path, method: :post, class: "btn btn-outline-info" %>
    </p>
  <% else %>
    <%= link_to "Log in", new_session_path, class: "btn btn-outline-info" %>
  <% end %>
</section>


  <main>
    <%= yield %>
  </main>
  </body>
</html>
