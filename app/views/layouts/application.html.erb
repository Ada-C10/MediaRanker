<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag 'owl.jpg' %>
  </head>

  <header class="header-section">
    <h1><%= link_to 'Media Ranker', root_path, class: "header-link" %> <small class="header-text">Ranking the Best of Everything</small>
    </h1>
    <nav "justify-content-center">
      <ul class="nav">
        <li class="nav-item nav-link">
          View top media
        </li>
        <li class="nav-item">
          <%= link_to 'View all media', works_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Add a new work', new_work_path, class: "nav-link" %>
        </li>
        <li class="nav-item nav-link">
          View all users
        </li>
      </ul>
    </nav>
  </header>

  <section class="flash-messages">
      <% flash.each do |key, message| %>
        <p class="<%= key %>">
          <%= message %>
        </p>
      <% end %>
    </section>

  <body>
    <%= yield %>
  </body>
</html>
