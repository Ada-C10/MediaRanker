<!DOCTYPE html>
<html>
<head>
  <title>MediaRanker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <h1 class="display-5"><%= link_to "MediaRanker", root_path %> | Ranking the Best of Everything</h1>
    <nav>
      <div class="container">
        <div class="row">
          <div class="list-inline">
            <div class="text-white"><%= link_to "View all media", works_path, class: "all_works-link" %></div>
            <div class="text-white"><%= link_to "Add a new work", new_work_path, class: "new_work-link" %></div>
            <div cclass="text-white"><%= link_to "View all users", users_path, class: "new_work-link" %></div>
          </div>
        </div>

        <div class="container">
          <div class="row">
            <% if @current_user %>
            <div class="btn btn-primary"><%= link_to "Logged in as #{@current_user.username}", user_path(@current_user.id), class: "login-link" %></div>
            <div class="btn btn-primary"><%= link_to "Log out", logout_path, method: :post, class: "logout-link" %></div>
            <% else %>
            <div class="btn btn-primary"><%= link_to "Log in", new_session_path, class: "login-link" %></div>
            <% end %>
          </div>
        </div>
      </div>

    </nav>
  </header>
  <div class="alert alert-info">
    <% flash.each do |key, message| %>
    <%= message %>
    <% end %>
  </div>

  <main>
    <%= yield %>
  </main>

  <footer>Footer Info</footer>
</body>
</html>
