<!DOCTYPE html>
<html>
<head>
  <title>Media Ranker 2.0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" media="screen" href="https://fonts.googleapis.com/css?family=Gudea:400,700|Hammersmith+One" />
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

</head>

<body>
  <header class="app-header__header">
    <h1>
      <a href="/">Media Ranker</a>
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/">View top media</a>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/works">View all media</a>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/works/new">Add a new work</a>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/users">View all users</a>
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">
        <li>
        <% if session[:user_id] %>
          <%# link_to "Logged in as" "#{@user.id}", user_path(@user.id) %>
          <%= link_to "Log Out", logout_path, method: :delete, class: 'btn btn-primary' %>
        <% else %>
          <%= link_to "Login", login_path, class: 'btn btn-primary' %>
        <% end %>
        </li>
      </ul>
    </section>


    <section class="flash">
      <% flash.each do |name, message| %>
        <% if message.class == Array %>
        <div class="alert-warning">
          <% message.each do |msg| %>
            <div class="alert-<%= name %>">
              <strong><%= "#{name}:" %></strong><%= " #{msg}" %></div>
          <% end %>
        <% else %>
          <div class="alert-<%= name %>">
              <%= message %>
          </div>
        <% end %>
      <% end %>

      <% if @current_user %>
        <h2>Welcome <%= @current_user.username %> </h2>
      <% end %>

    </nav>
  </header>
