<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <section class="flash">
        <%flash.each do |name, message|%>
        <% if message.class == Array %>
          <%message.each do |msg|%>
            <div class="alert-warning">
              <strong> <%= "#{name}:" %> </strong> <%= " #{msg}"%> </div>
          <%end%>
        <%else%>
          <div class="alert-warning">
             <%=message %>
           </div>
        <%end%>
      <%end%>

      </section>
  <header class="app-header__header">
    <h1>
      <a href="/"> Media Ranker</a>

      <small> Ranking the Best of Everything</small>
    </h1>
    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item"><a class="nav-link" href="/"> View Top Media</a></li>
        <li class="nav-item app-header__nav_item"><a class="nav-link" href="/works">View all Media</a></li>
        <li class="nav-item app-header__nav_item"><a class="nav-link" href="/works/new">Add a New Work</a></li>
        <li class="nav-item app-header__nav_item"><a class="nav-link" href="/users">View all Users</a></li>
      </ul>
      <ul class="nav app-header__user-nav-container"
        <li class="app-header__nav_item">
        <% if @current_user %>
          <%= link_to "Logged in as #{@current_user.username}", user_path(@current_user.id), class: 'btn btn-primary'%>
          <%= link_to "Log Out", logout_path, method: :delete, class: 'btn btn-primary' %>
       <% else %>
          <%= link_to "Login", login_path, class: 'btn btn-primary' %>
       <% end %>
         </li>
      </ul>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
