<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <section class="flash">
        <%flash.each do |name, message|%>
        <% if message.class == Array %>
          <%message.each do |msg|%>
            <div class="alert-warning">
              <strong> <%= "#{name}:" %> </strong> <%= " #{msg}"%> </div>
          <%end%>
        <%else%>
          <div class="alert-warning">
             <%=message %>
           </div>
        <%end%>
      <%end%>

      </section>
    <h1><%= link_to "Media Ranker", root_path %> | Ranking the Best of Everything</h1>
    <nav>
      <ul>
        <li><%= link_to "View Top Media", "/" %></li>
        <li><%= link_to "View all Media", "/works" %></li>
        <li><%= link_to "Add a New Work", "/works/new" %></li>
        <li><%= link_to "View all Users", "/users" %></li>
        <li>
        <% if @current_user %>
          <%= link_to "Logged in as #{@current_user.username}", user_path(@current_user.id), class: 'btn btn-primary'%>
          <%= link_to "Log Out", logout_path, method: :delete, class: 'btn btn-primary' %>
       <% else %>
          <%= link_to "Login", login_path, class: 'btn btn-primary' %>
       <% end %>
         </li>
      </ul>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
