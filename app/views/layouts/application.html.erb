<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= favicon_link_tag asset_path('owl.jpg'), :rel => 'icon', :type =>  'image/jpg' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="app-header">
    <h1 class="header-title">
      <%= link_to "Media Ranker", root_path%>
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="site-nav">

      <ul>
        <li><%= link_to "View top media", root_path %></li>
        <li><%= link_to "View all media", works_path %></li>
        <li><%= link_to "Add a new work", new_work_path %></li>
        <li><%= link_to "View all users", users_path %></li>
      </ul>


      <ul class="login-info">

        <% if @logged_in_user  %>
        <li>  <%= link_to "Logged in as #{@logged_in_user.username}", logout_path, method: :post, class: "btn btn-primary" %> </li>

        <li>   <%= link_to "Log out", logout_path, method: :post, class: "btn btn-primary" %> </li>

        <% else %>

        <li>  <%= link_to "Log in", new_session_path,  class: "btn btn-primary" %> </li>

          <% end %>
      </ul>

    </nav>

  </header>

  <section class="alert-container">
      <% flash.each do |key, message| %>
        <p class="<%= key %>">
          <%= message %>
        </p>
      <% end %>
  </section>

  <main>
    <%= yield %>
  </main>

  </body>
</html>
