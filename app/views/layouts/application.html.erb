<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" media="screen" href="https://fonts.googleapis.com/css?family=Gudea:400,700|Hammersmith+One">
  </head>
  <body>
  <header class="app-header__header">
    <h1> <%= link_to "Media Ranker", works_path %>
    <small>Ranking the Best of Everything </small> </h1>
    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item"> View top media </li>
        <li class="nav-item app-header__nav_item"> <%= link_to "View all media", works_path %> </li>
        <li class="nav-item app-header__nav_item"> <%= link_to "Add a new work", new_work_path %> </li>
        <li class="nav-item app-header__nav_item"> <%= link_to "View all users", users_path %> </li>
        <li>
          <% if @current_user %>
            <%= link_to "Log Out", logout_path, method: :delete, class: 'btn btn-info'%>
          <% else %>
            <%= link_to "Login", login_path, class: 'btn btn-info'%>
          <% end %>
        </li>
        <li>
          <% if @current_user %>
            <%= link_to "Signed in as #{@current_user.username}", user_path(@current_user.id), class: 'btn btn-info' %> </h2>
          <% end %>
        </li>
      </ul>
    </nav>
  </header>
      <section class="flash alert-warning">
        <% flash.each do |name, message| %>
          <% if message.class == Array %>
          <section class="alert-warning flashmessage">
              <% message.each do |msg| %>
                <p><strong><%="#{name}:" %></strong><%= " #{msg}" %> </p>
              <% end %>
          </section>
          <% else %>
            <section class="alert-<% name %> flashmessage">
              <%= message %>
              <% if @work && @work.errors.any? %>
                <ul>
                  <% @work.errors.each do |column, message| %>
                  <li>
                    <strong><%= column.capitalize %></strong> <%= message %>
                  </li>
                  <% end %>
                </ul>
              <% end %>
            </section>
          <% end %>
        <% end %>
      </section>
    <%= yield %>
  </body>
</html>
