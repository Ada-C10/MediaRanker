<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= favicon_link_tag asset_path('owl.jpg'), :rel => 'icon', :type =>  'image/jpg' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  <header>
    <h1><%= link_to "Media Ranker", root_path%></h1>
    <h1>Ranking the Best of Everything</h1>

    <nav>
      <ul>
        <li><%= link_to "View top media", root_path %></li>
        <li><%= link_to "View all media", works_path %></li>
        <li><%= link_to "Add a new work", new_work_path %></li>
        <li><%= link_to "View all users", users_path %></li>
      </ul>
    </nav>


  <section class="login-info">
    <% logged_in_user = User.find_by(id: session[:user_id]) %>

    <% if logged_in_user  %>
      <%= link_to "Logged in as #{logged_in_user.username}", logout_path, method: :post, class: "btn btn-primary" %>

      <%= link_to "Log out", logout_path, method: :post, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "Log in", new_session_path,  class: "btn btn-primary" %>

      <% end %>
  </section>

  </header>

  <section class="flash-messages">
    <% flash.each do |key, message| %>
      <p class="<%= key %>">
        <%= message %>
      </p>
    <% end %>
  </section>


  <main>
    <%= yield %>
  </main>

  </body>
</html>
