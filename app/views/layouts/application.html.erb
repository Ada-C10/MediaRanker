<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <section class="flash">
        <% flash.each do |name, message| %>
          <% if message.class == Array %>
            <% message.each do |msg| %>
              <div class="alert-<%= name %>">
                <strong><%= "#{name}:" %></strong><%= " #{msg}" %></div>
            <% end %>
          <% else %>
            <div class="alert-<%= name %>">
                <%= message %>
            </div>
          <% end %>
        <% end %>

        <% if @current_user %>
          <h2>Welcome <%= @current_user.name %> </h2>
        <% end %>
      </section>
      <h1>Media Ranker| Ranking the Best of Everything</h1>
      <nav class="navbar navbar-default">

        <div class="navbar-header">
          <%= link_to "View top media", root_path, class: "navbar-brand" %>
        </div>
          <li><%= link_to "View all media", works_path %></li>
          <li><%= link_to "Add a new work", new_work_path %><li>
          <li><%= link_to "View all users", users_path %><li>
      </nav>
      <li class="navbar navbar-right">
      <% if @current_user %>
        <%= link_to "Log Out", logout_path, method: :delete, class: 'btn btn-primary' %>
      <% else %>
        <%= link_to "Login", login_path, class: 'btn btn-primary' %>
      <% end %>
      </li>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
