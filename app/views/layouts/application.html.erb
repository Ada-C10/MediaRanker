<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="app-header__header">
      <h1>
        <a href="/">Media Ranker |</a>
        <small>Ranking the Best of Everthing</small>
      </h1>
      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href = "/">View top media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href = "/works">View all media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href = "/works/new">Add new media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href = "/users">View all users</a>
          </li>
        </ul>
        <section class = "login-info">
          <ul class="nav app-header__user-nav-container">
            <li class="nav-item app-header__nav_item">'
              <% if @logged_in_user %>
                Logged in as
                <%= @logged_in_user.name %>
                <%= link_to "Log out", logout_path, method: :post, class: "btn btn-primary" %>
            </li>
            <% else %>
              <%= link_to "Log in", new_session_path, class: "btn btn-primary" %>
            <% end %>
            <li
            <li class="nav-item app-header__nav_item">
              <%= link_to "Log out", logout_path, method: :post, class: "btn btn-primary" %>
            </li>
          </ul>
        </section>

      </nav>
    </header>
    <main>
      <section class= "flash">
        <%flash.each do |key, message| %>
          <%=message%>
        <% end %>
      </section>
      <%= yield %>
    </main>
  </body>
</html>
