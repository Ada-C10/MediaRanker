<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
  <header>
      <section class="flash">
        <% flash.each do |name, message| %>
          <% if message.class == Array %>
            <% message.each do |msg| %>
              <div class="alert-warning">
                <strong><%= "#{name}:" %></strong><%= " #{msg}" %></div>
            <% end %>
          <% else %>
            <div class=" alert-success">
                <%= message %>
            </div>
          <% end %>
        <% end %>

      </section>

      <header class="app-header_header">
      <h1> Media Ranker |
        <small>Ranking the Best of Everything </small>
        </h1>


      <nav class="navbar">
      <ul class="nav app-header_site-nav-containe">
        <li class="nav app-header_site-nav_item">
          <%= link_to  "View top media", "/" %>
        </li>
        <li class="nav app-header_site-nav_item" >
          <%= link_to  "View all media  ", works_path %>
        </li>
        <li class="nav app-header_site-nav_item">
          <%= link_to "Add a new work", new_work_path %>
        </li>
        <li class="nav app-header_site-nav_item">
          <%= link_to "View all Users", users_path %>
        </li>

        <li >
          <% if @current_user %>
          <%= link_to "#{@current_user.name} is logged in", user_path(@current_user.id), class: "btn btn-primary" %>
          <% end %>
        </li>

        <li >
          <% if @current_user %>
          <%= link_to "log out", logout_path, method: :delete, class: "btn btn-primary" %>
          <% else %>
          <%= link_to "Login", login_path,class: "btn btn-primary" %>
          <% end %>
        </li>
          </ul>
        </nav>


    </header>
    <%= yield %>
  </body>
</html>
