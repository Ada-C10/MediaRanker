<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1 class="logo"> <%= link_to "Media Ranker", works_path %> | Ranking the Best of Everything</h1>
    <nav>
      <ul>
        <li> View top media </li>
        <li> <%= link_to "View all media", works_path %> </li>
        <li> <%= link_to "Add a new work", new_work_path %> </li>
        <li> <%= link_to "View all users", users_path %> </li>
        <li>
          <% if @current_user %>
            <%= link_to "Log Out", logout_path, method: :delete, class: 'btn btn-info'%>
          <% else %>
            <%= link_to "Login", login_path, class: 'btn btn-info'%>
          <% end %>
        </li>
      </ul>
    </nav>
      <% if @current_user %>
        <h2> You are signed in as <%= @current_user.username %> </h2>
      <% end %>

    <%= yield %>
  </body>
</html>
