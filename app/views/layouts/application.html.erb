<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <h1>Media Ranker | Ranking the Best of Everything</h1>
    <nav>
      <ul>
        <li><%= link_to "View top media", root_path %></li>
        <li><%= link_to "View all media", works_path %></li>
        <li><%= link_to "Add a new work", new_work_path %></li>
        <li><%= link_to "View all users", users_path %></li>

      </ul>
    </nav>

    <section class="login-info">
      <% if @logged_in_user %>
      <ul>
        <li>
          <%= link_to user_path(@logged_in_user.id), class: "btn btn-outline-info" do %>
          Logged in as
          <%= @logged_in_user.name %>
          <% end %>
        </li>
        <li>
          <%= link_to "Log out", logout_path, method: :post, class: "btn btn-outline-info" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Log in", new_session_path, class: "btn btn-outline-info" %>
        </li>
      <% end %>
    </ul>
    </section>
  </header>

  <section class="flash-messages">
    <% flash.each do |key, message| %>
      <p class="<%= key %>">
        <%= message %>
      </p>
    <% end %>
  </section>

    <%= yield %>
  </body>
</html>
