  </head>
    <title>Media Ranker</title>

    <section>
<body>
  <header class="app-header_header">
    <h1>
    <%= "Media Ranker |" %>
    <small><%="Ranking the Best of Everything" %></small>
    </h1>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>



    <nav class="app-header__nav">
    <ul class="nav app-header__site-nav-container">
      <li class="nav-item app-header__nav_item">
        <a class="nav-link" href="/">View top media</a>
      </li>
      <li class="nav-item app-header__nav_item">
        <a class="nav-link" href="/works">View all media</a>
      </li>
      <li class="nav-item app-header__nav_item">
        <a class="nav-link" href="/works/new">Add a new work</a>
      </li>
      <li class="nav-item app-header__nav_item">
        <a class="nav-link" href="/users">View all users</a>
      </li>
    </ul>

      </section>
      <section class="flash-messages">
          <% flash.each do |key, message| %>
              <p class="<%= key %>">
                <%= message %>
              </p>
            <% end %>
          </section>

    <section class="login-info">

      <% if @logged_in_user %>
        <p>
          Currently logged in as
          <%= @logged_in_user.user_name %>
          <%= link_to "Log out", logout_path, method: :post, class: "btn btn-outline-info" %>
        </p>
      <% else %>
          <%= link_to "Log in", new_session_path, class: "btn btn-outline-info" %>
      <% end %>
      </section>

    <%= yield %>
  </body>
</html>
