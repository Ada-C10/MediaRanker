<!DOCTYPE html>
<html>
<head>
  <title>MediaRanker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>


<body>
  <header>
      <h1>
        Media Ranker <span> Ranking the best in everything </span>
      </h1>


      <nav>
      <ul>
        <li><%= link_to "View top media", main_works_path %></li>
        <li><%= link_to "View all media", works_path %></li>
        <li><%= link_to "Add a new work", new_work_path %></li>
      </ul>
    </nav>

    <section class="login-info">
      <p>
        Logged in as user <%= session[:user_id] %>
      </p>
      <%= link_to "Log in", new_session_path, class: "btn btn-primary" %>
      <%= link_to "Log out", logout_path, class: "btn btn-primary", method: :post %>

    </section>
  </header>

  <section class="flash-messages">
    <% flash.each do |key, message| %>
    <p class="<%= key %>">
      <%= message %>
    </p>
    <% end %>
  </section>

  <main>
    <%= yield %>
  </main>
</body>
</html>
