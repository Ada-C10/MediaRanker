<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>
      <section class="flash">
        <% flash.each do |name, message| %>
          <% if message.class == Array %>
            <% message.each do |msg| %>
              <div class="alert-warning"><%= "#{name}: #{msg}" %></div>
            <% end %>
          <% else %>
            <div class="alert-warning"><%= message %></div>
          <% end %>
        <% end %>
      </section>
    </header>

    <nav>
      <ul id="menu">
          <li><%= link_to "View top media", main_path %></li>
          <li><%= link_to "View all media", works_path %></li>
          <li><%= link_to "Add a new work", new_work_path %></li>
          <li>View all users<%# link_to "View all users", users_path %></li>
        </ul>
    </nav>

    <main>
    <%= yield %>
    </main>

  </body>
</html>
