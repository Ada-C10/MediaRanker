<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="app-header__header">
        <h1>
          <a href="/">Media Ranker</a>
          <small>Ranking the Best of Everything</small>
        </h1>

        <nav class="app-header__nav">
          <ul class="nav app-header__site-nav-container">
            <li class="nav-item app-header__nav_item">
            <li class="nav-link" ><%=link_to "View top media", root_path%></li>
            </li>
            <li class="nav-item app-header__nav_item">
              <li class="nav-link" ><%=link_to "View all media", works_path%></li>
            </li>
            <li class="nav-item app-header__nav_item">
              <li class="nav-link" ><%=link_to "Add a new work", new_work_path%></li>
            </li>
            <li class="nav-item app-header__nav_item">
              <li class="nav-link" ><%=link_to "View all users", users_path %></li>
            </li>
          </ul>
          <ul class="nav app-header__user-nav-container">

            <li class="nav-item app-header__nav_item">
              <% if @current_user %>
              <li><%= link_to "Log Out", user_path(session[:user_id]), method: :delete, class: 'btn btn-secondary' %></li>
              <% else %>
              <li><%= link_to "Login", new_user_path, class: 'btn btn-primary' %></li>
              <% end %>
            </li>


          </ul>
        </nav>

        <section class="flash">
           <% flash.each do |name, message| %>
             <% if message.class == Array %>
             <div class="alert-warning">
               <% message.each do |msg| %>
                   <p><strong><%= "#{name}:" %></strong><%= " #{msg}" %></p>
               <% end %>
             </div>
             <% else %>
               <div class="alert-<%= name %>">
                   <%= message %>
               </div>
             <% end %>
           <% end %>

           <!-- <% if @current_user %>
             <h2>Welcome <%= @current_user.username %> </h2>
           <% end %> -->
         </section>

    </header>


  <main>
    <%= yield %>
  </main>

  </body>
</html>
