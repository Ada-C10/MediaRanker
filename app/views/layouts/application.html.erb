<!DOCTYPE html>
<html>
<head>
  <title>MediaRanker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="app-header__header">
    <h1>
      <%= link_to 'Media Ranker', root_path %>
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <%= link_to 'View top media', root_path, class:'nav-link' %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to 'View all media', works_path, class:'nav-link' %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to 'Add a new work', new_work_path, class:'nav-link' %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to 'View all users', users_path, class:'nav-link' %>
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">

        <li class="nav-item app-header__nav_item">
          <!-- <section class="login-info"> -->
          <% if @logged_in_user %>

          <%= link_to "Logged in as #{@logged_in_user.username}", user_path(@logged_in_user) %>
          <%= link_to 'Log out', logout_path, method: :delete, class:"btn btn-primary" %> </p>

          <% else %>
          <%= link_to "Log in", login_path, class:"btn btn-primary" %>
          <% end %>

          <section class="alert__container">
            <% flash.each do |name, message| %>
            <div class="<%= name %>">
            <% if name == :alert %>
            <ul>
              <% name.each do |field, e_message| %>
              <li>
                <%= field %>: <%= e_message %>
              </li>
              <% end %>
            </ul>
            <% else %>
             <%= message%>
</div>
            <% end %>
            <% end %>
          </section>
          <!-- </section> -->
        </li>

      </ul>
    </nav>
  </header>

  <%= yield %>
</body>
</html>
