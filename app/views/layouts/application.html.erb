<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1><%=link_to "Media Ranker "%>
        <span> |   Ranking the Best of Everything</span</h1>
      </h1>
      <nav>
        <ul>
          <li> <%= link_to "View top media"%></li>
          <li> <%= link_to "View all media", works_path%></li>
          <li> <%= link_to "Add a new work", new_work_path%></li>
          <li> <%= link_to "View all users", users_path%></li>
        </ul>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
  </body>
</html>
