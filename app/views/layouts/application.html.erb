<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Media Ranker 2.0</title>
    <meta name="csrf-param" content="authenticity_token" />
    <meta name="csrf-token" content="YwrEZtf0qlH6w02/asnupU9OPLUq5IXTfy2xM30cpHWM4+d0ZYs/0QVd8mOz25wWasb9Af+I8VoyPEBaAbL+ng==" />

    <link rel="stylesheet" media="screen" href="/assets/application-23e0d10ed2d885fab99a6549bc004eca19f49cf694e045afebe16b6e9bf1345a.css" />
    <link rel="stylesheet" media="screen" href="https://fonts.googleapis.com/css?family=Gudea:400,700|Hammersmith+One" />
    <link rel="shortcut icon" type="image/x-icon" href="/assets/favicon-910822ff6cd5f6d37119171c4b716f1d4e5fe0e8ad5e408627659ebf8d7f16b1.ico" />
    <link rel="icon" type="image/png" href="https://cdn0.iconfinder.com/data/icons/rainbow-owl/90/bird-animal-owl-33-512.png">
  </head>

  <body cz-shortcut-listen="true">
    <header class="app-header__header">
      <h1>
        <a href="/">Media Ranker</a>
        <small>Ranking the Best of Everything</small>
      </h1>

      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/">View top media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/works">View all media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/works/new">Add a new work</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/users">View all users</a>
          </li>
        </ul>
        <ul>
          <% if @current_user %>
            <p class="btn btn-primary">Logged in as <%= @current_user.user_name %></p>
          <%end%>
        </ul>
        <ul class="nav app-header__user-nav-container">

          <li class="nav-item app-header__nav_item">
            <% if @current_user %>
              <%= link_to "Log Out", logout_path, class: "btn btn-primary", method: :delete %>
            <% else %>
              <%= link_to "Log in", login_path, class: "btn btn-primary" %>
            <% end %>
          </li>
        </ul>
      </nav>
    </header>
    <section class="alert__container">
      <% flash.each do |name, message| %>
        <% if message.class == Array %>
          <div class="alert alert-warning">
            <ul>
              <% message.each do |msg| %>
                <li class="alert alert-warning"><%= "#{name.capitalize}: #{msg}\n" %></li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <div class="alert-<%= name %>"><%= message %></div>
        <%end%>
      <% end %>
  </section>
    <%= yield %>
  </body>
</html>
