<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header_title">
        <h1 class="title">Media Ranker <span id="subtitle">| Ranking the Best of Everything</span>
        </h1>
      </div>
      <div class="links">
        <nav>
          <ul>
            <div class="site_navigation">
              <li><%= link_to "View top media", root_path %></li>
              <li><%= link_to "View all media", works_path %></li>
              <li>add new work link</li>
              <li>all users link</li>
            </div>
            <div class="login_logout">
              <li>log in link</li>
              <li>Log out</li>
            </div>
          </ul>
        </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
