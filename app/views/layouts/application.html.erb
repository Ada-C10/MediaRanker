<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class= "app-header__header">

      <h1>Media Ranker</h1>
      <h1>Ranking the best of everything</h1>

      <section class="flash">
        <% flash.each do |name, message| %>
          <% if message.class == Array %>
            <% message.each do |msg| %>
              <div class="alert-<%= name %>">
                <strong><%= "#{name}:" %></strong><%= " #{msg}" %></div>
            <% end %>
          <% else %>
            <div class="alert-<%= name %>">
                <%= message %>
            </div>
          <% end %>
        <% end %>

        <% if @current_user %>
          <h2>Welcome <%= @current_user.username %> </h2>
        <% end %>
      </section>

      <nav>
        <ul class="navbar">
          <li class="nav-item"><%= link_to  "View All Media", works_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to  "Add New Work", new_work_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to  "View All Users", users_path, class: "nav-link" %></li>

          <% if @current_user %>
            <li><%= link_to "Log Out", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" } %></li>
          <% else %>
            <li><%= link_to "Log In", login_path, class: "btn btn-primary" %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
