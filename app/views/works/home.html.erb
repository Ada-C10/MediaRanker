<h1>Works#home</h1>
<p>Find me in app/views/works/home.html.erb</p>
<% @spotlight %>
<h1>Media Spotlight: <%= link_to @spotlight.title, work_path(@spotlight.id) %> by <%= @spotlight.creator %></h1>
<h4><%= @spotlight.number_of_votes %>
<% if @spotlight.number_of_votes != 1 %>
<%= "votes" %>
<% else %>
<%= "vote" %>
<% end %> - <%= @spotlight.description %></h4>

<ul>
  <% @works.each_key do |category| %>
    <li><h2>TOP <%= category.upcase %>S</h2></li>
      <ul>
        <% @works[category].each do |work| %>
          <li><h3><%= link_to work.title, work_path(work.id) %></h3></li>
          <li><h4>by <%= work.creator %></h4></li>
        <% end %>
      </ul>
  <% end %>
</ul>
