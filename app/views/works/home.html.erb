<section class="spotlight">
   <h2 class="spotlight__header">
     <span class="spotlight__header--prefix">Media Spotlight:</span>
     <% spot = Work.top_one%>
     <a class="spotlight__link-to"> <%= link_to "#{spot.title}", work_path(spot.id) %> by i will not stand for this!</a>
   </h2>
   <p class="spotlight__description">
     <%= "#{spot.votes.count} vote(s)- #{spot.description}"%>
   </p>
 </section>

<hr class="root__hr" />

<section class="top-ten__container">
  <section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Movies
  </h2>
  <ul class="list-group top-ten__list">
    <% movies = Work.movie_list%>
    <% movies[0..9].each do |e| %>
      <li class="list-group-item">
        <h4>
          <a><%= link_to "#{e.title}", work_path(e.id) %></a>
          <small class="top-ten__creator"><%=e.creator %></small>
        </h4>
        <p><%= e.votes.count%> votes</p>
      </li>
    <%end%>
  </ul>
</section>

