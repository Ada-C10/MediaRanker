<%= form_with model: @work, url: works_path, method: :post do |f|%>

  <p>Add a new work</p>

  <%= f.label :category, "Category" %>
  <%= f.select :category, ["Album", "Book", "Movie"] %>


  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>


  <%= f.label :published_year %>
  <%= f.text_field :published_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>


  <%= f.submit "Create Work", class: "add_work-button" %>

  <% end %>
