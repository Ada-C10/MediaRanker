<h1>Add New Work</h1>

<%= form_with model: @work do |f| %>
<%= f.label :category %>
<%= f.select :category, Work::CATEGORY, prompt: "Pick Category" %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :creator %>
<%= f.text_field :creator %>

<%= f.label :publication_year %>
<%= f.text_field :publication_year %>

<%= f.label :description %>
<%= f.text_area :description, cols: 25, rows:10 %>

<%= f.submit %>
<% end  %>
