
<%= form_with model: @work, local: true do |f|%>
  <h2>Add New Work</h2>
  <div class="form-group">
  <%= f.label :category, "Category"%>
  <div class="form-group">

  <select class="form-control" name="work[category]">
    <option value="album">album</option>
    <option value="book">book</option>
    <option value="movie">movie</option>
  </select>
</div>

  <div class="form-group">
  <%= f.label :title , "Title"%>
  <%= f.text_field :title, class: "form-control"%>

  <div class="form-group">
  <%= f.label :creator , "Creator"%>
  <%= f.text_field :creator, class: "form-control"%>
  </div>

  <div class="form-group">
  <%= f.label :publication_year , "Published"%>
  <%= f.text_field :publication_year, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :description, "Description"%>
  <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>
  <section>
