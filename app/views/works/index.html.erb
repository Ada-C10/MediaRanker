<header class="app-header__header">
    <h1>
      <a href="/">Media Ranker</a>
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/">View top media</a>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/works">View all media</a>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/works/new">Add a new work</a>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/users">View all users</a>
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">

        <li class="nav-item app-header__nav_item">
          <a class="btn btn-primary" href="/login">Log In</a>
        </li>

      </ul>
    </nav>
  </header>


  <main>
    <h2>List of Works</h2>

  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @works.each do |work| %>
        <% if work.category == 'album' %>
          <tr>
            <td>!!!9</td>
            <td><%= link_to work.title, work_path(work) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/5/upvote">!!!Upvote</a></td>
          </tr>
      </tbody>
      <% end %>
    </table>
  </section>
  <section class="media-table">
    <h4>Books</h4>
    <table class="table">
      <thead>
        <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% if work.category == 'book' %>
          <tr>
            <td>!!!9</td>
            <td><%= link_to work.title, work_path(work) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/5/upvote">!!!Upvote</a></td>
          </tr>
      </tbody>
      <% end %>
    </table>
  </section>
  <section class="media-table">
    <h4>Movies</h4>
    <table class="table">
      <thead>
        <% if work.category == 'movie' %>
          <tr>
            <td>!!!9</td>
            <td><%= link_to work.title, work_path(work) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/5/upvote">!!!Upvote</a></td>
          </tr>
      </thead>
      <tbody>
          <tr>
            <td>9</td>
            <td><a href="/works/32">Harry Potter and the Gorblet of Fire</a></td>
            <td>Warner Brothers</td>
            <td>2005</td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/32/upvote">Upvote</a></td>
          </tr>
      </tbody>
      <% end %>
    </table>
    <% end %>
  </section>

<a class="btn btn-secondary" href="/">View top media</a>
<a class="btn btn-primary" href="/works/new">Add a new work</a>

  </main>
