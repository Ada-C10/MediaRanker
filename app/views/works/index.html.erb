<p id="notice"><%= notice %></p>


<h1>Works</h1>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Creator</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
      <td><%= work.votes_count%></td>
        <td><%= link_to "#{work.title}", work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to "Upvote", works_upvote_path(work.id), method: :patch, class: "btn btn-primary" %>
        
      </tr>
    <% end %>
  </tbody>
</table>

