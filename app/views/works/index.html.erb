<section class = "all-works">
  <h2>List of Works</h2>

  <section>
    <h4>Albums</h4>
      <ul class = "albums-list">
      <% albums = Work.where(category: "album") %>
        <% albums.each do |ref , info| %>
      <li><%= ref.title %></li>
      <% end %>
      </ul>
    <h4>Books</h4>
      <ul class = "books-list">
      </ul>
    <h4>Movies</h4>
      <ul class = "movies-list">
      </ul>
  </section>
</section>
