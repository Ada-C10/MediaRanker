<%['movie', 'book', 'album'].each do |category| %>
<br>
<br>
<h2><%=category.capitalize%>s </h2>
<table style="width:100%">
  <tr class="header_font">
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
  <%@works = Work.sort_by_votes(category)%>
    <% @works.each do |work| %>
    <tr>
      <td><%=work.votes.count%></td>
      <td><%=link_to work.title, work_path(work.id) %></td>
      <td><%=work.creator%></td>
      <td><%=work.publication_year%></td>
      <td><%= link_to "Upvote", upvote_path(work.id), method: :post, class: "btn btn-primary" %></td>
    </tr>
      <%end%>
</table>
  <%end%>
