<main>
    <h2>List of Works</h2>

  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <% @albums.each do |album| %>
      <tbody>
          <tr>
            <td><%= album.votes.count %></td>
            <td><%= link_to album.title, work_path(album.id) %></td>
            <td><%= album.creator %></td>
            <td><%= album.publication_year %></td>
            <td><%= link_to "Upvote", work_votes_path(album.id), method: :post, class:"btn btn-primary"  %></td>
            <% end %>
          </tr>
      </tbody>
    </table>
    <br />
