<body>
  <header>
    <h1>Total Works </h1>
  </header>
  <main>
    <section class="movies">
      <h2>Movies</h2>
      <% movies = Work.where(category: "movie") %>
      <% if movies.nil? %>
        <%= puts "No movies" %>
      <% else %>
        <% movies.each do |movie| %>
          <p><%= movie.title %></p>
        <% end %>
      <% end %>
    </section>
    <section class="books">
      <h2>Books</h2>
      <% movies = Work.where(category: "book") %>
      <% movies.each do |movie| %>
        <p><%= movie.title %></p>
      <% end %>
    </section>
    <section class="albums">
      <h2>Albums</h2>
      <% movies = Work.where(category: "album") %>
      <% movies.each do |movie| %>
        <p><%= movie.title %></p>
      <% end %>
    </section>
  </main>
</body>
