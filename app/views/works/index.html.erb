<h2>List of Works</h2>

<% @works_by_category.each do |category, works| %>
  <section class="media-table">
    <h4><%= category.pluralize.capitalize %></h4>
    <table style="width:100%" class="table">
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% works.each do |work| %>
          <tr>
            <td><%= pluralize(work.votes.count, "votes") %></td>
            <td><%= link_to work.title, work_path(work.id)%></td>
            <td><%= work.creator%></td>
            <td><%= work.published_year%></td>
            <td><<%= link_to "Vote", work_votes_path(work.id), method: :post, class: "btn btn-primary"%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  <% end %>

<%= link_to "View top media", root_path, class: "btn btn-secondary" %>
<%= link_to "Add a new work", new_work_path, class: "btn btn-primary" %>
