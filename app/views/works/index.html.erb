<p id="notice"><%= notice %></p>

<h2>List of Works</h2>

<% [@top_albums, @top_books, @top_movies].each do |works| %>
  <section class="media-table">
    <h4><%="#{works.first.category.capitalize}s"%></h4>
    <table>
      <thead>
        <tr>
          <th width='80'>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width='100'>Published</th>
          <th width='100'>Upvote</th>
        </tr>
      </thead>

    <tbody>
      <% works.each do |work| %>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to "#{work.title}", work_path(work.id) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= link_to "Upvote", upvote_path(work.id), method: :post, class: 'btn btn-primary'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
</section>

<%= link_to 'View top media', root_path, class: 'btn btn-secondary' %>
<%= link_to 'New Work', new_work_path, class: 'btn btn-primary' %>
