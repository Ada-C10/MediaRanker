 <h2>List of Works</h2>

 <section class="media-table">
   <h4>Albums</h4>
   <table class="table">
     <thead>
       <tr>
         <th scope="col" width>Votes</th>
         <th scope="col" >Title</th>
         <th scope="col" >Created By</th>
         <th scope="col" width>Published</th>
         <th scope="col" width>Upvote</th>
       </tr>
     </thead>

     <tbody>
       <% @works.each do |work| %>
       <% if work.category == 'album' %>
       <tr>
         <td>[TO DO: POPULATE WORK -  WORK.VOTES]</td>
         <td><%= work.title%></td>
         <td><%= work.creator%></td>
         <td><%= work.publication_year%></td>
         <td><a class="btn btn-primary">VOTE[TO DO: ADD data-method="post" href="/works/[NUM]/vote"]</a></td>
       </tr>
       <%end%>
       <%end%>
     </tbody>
   </table>
 </section>

