<h2 class="list-titles">List of Works</h2>
<h3><strong>Albums</strong></h3>
<section>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          Votes
        </th>
        <th scope="col">
          Title
        </th>
        <th scope="col">
          Created By
        </th>
        <th scope="col">
          Published
        </th>
        <th scope="col">
          Upvote
        </th>
      </tr>
    </thead>
    <tbody>
      <% Work.order_works_by_category('album').each do |work| %>
      <tr>
        <td scope="row"><%= work.votes.size %></td>
        <td>
          <%= link_to work.title, work_path(work.id) %>
        </td>
        <td>
          <%= work.creator %>
        </td>
        <td>
          <%= work.publication_year %>
        </td>
        <td>
          <span class="btn btn-info"><%= link_to "Upvote", work_votes_path(work.id), method: :create, class: "btn" %></span>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

