<h1>Works#index</h1>
<p>Find me in app/views/works/index.html.erb</p>
<%['movie', 'book', 'album'].each do |category| %>
<h2><%=category%>s </h2>
<table style="width:100%">
  <tr class="header_font">
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>

  <% @works.each do |work| %>
  <tr>
    <%if category == work.category%>
    <td>VOTES</td>
    <td><%=link_to work.title, work_path(work.id) %></td>
    <td><%=work.creator%></td>
    <td><%=work.publication_year%></td>
    <td><%=link_to "Upvote", upvote_path(work.id), method: :post %></td>
    <%end%>
    <%end%>
  </tr>
</table>


<%end%>
