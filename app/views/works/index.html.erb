<article>
  <h1>List of Works</h1>
</article>

<article>
  <h2>Albums</h2>
  <section>
    <table class="table">
      <thead>
        <tr>
          <th class = "table_grid">Votes</th>
          <th class = "table_grid">Title</th>
          <th class = "table_grid">Created By</th>
          <th class = "table_grid">Published</th>
          <th class = "table_grid">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @works.each do |work| %>
          <% if work.category == "album" %>
            <tr>
              <td class = "table_grid"><%= work.total_votes %></td>
              <td class = "table_grid"><%= link_to work.title, work_path(work.id) %></td>
              <td class = "table_grid"><%= work.creator %></td>
              <td class = "table_grid"><%= work.publication_year %></td>
              <td class = "table_grid">
                <button type="button"><%= link_to "Upvote", work_votes_path(work.id), method: :post %></button>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </section>
</article>

