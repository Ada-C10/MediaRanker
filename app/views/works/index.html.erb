<h1> List of Works </h1>
<h2> Albums </h2>

<table class="table">
  <tr>
    <th> Votes </th>
    <th> Title </th>
    <th> Created By </th>
    <th> Published </th>
    <th> Upvote </th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td>
      <%= book.votes.count %>
    </td>
    <td>
      <%= link_to "#{book.title}", work_path(book.id) %>
    </td>
    <td>
      <%= book.creator %>
    </td>
    <td>
      <%= book.published.to_s %>
    </td>
    <td>
      <button class="btn btn-info">
        <p> <%= link_to "Upvote", work_votes_path(book.id), method: :post %></p>
      </button>
    </td>
  </tr>
<% end %>

</table>

