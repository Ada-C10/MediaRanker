<main>
<h1>List of Works</h1>
<section class="media-table">
<%['movie', 'book', 'album'].each do |category| %>
<h4><%=category.capitalize%>s </h4>
<table class="table">
  <thead>
  <tr class="header_font">
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
</thead>
<tbody>
  <% @works.each do |work| %>
  <tr>
    <%if category == work.category%>
    <td><%= work.votes.length %></td>
    <td><%=link_to work.title, work_path(work.id) %></td>
    <td><%=work.creator%></td>
    <td><%=work.publication_year%></td>
    <td><%=link_to "Upvote", upvote_path(work.id), method: :post, class: "btn btn-primary" %></td>
    <%end%>
    <%end%>
  </tr>
</tbody>
</table>
</section>

<%end%>

<%=link_to "View top media", root_path,class: "btn btn-secondary" %>
<%=link_to "Add a new work", new_work_path, class: "btn btn-primary" %>
</main>
