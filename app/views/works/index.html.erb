<h2> List of Works </h2>
<section class="media-table">
  <h4>Albums</h4>
  <table class="table">
    <thead>
      <tr>
        <th width="80">
          Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @albums.each do |work| %>
        <tr>
          <% a = Vote.where(work_id: work.id) %>
          <td><%=a.count %></td>
          <td><%=link_to "#{work.title}", work_path(work.id)%></td>
          <td><%=work.created_by %></td>
          <td><%=work.year_published %></td>
          <td><%=link_to "Upvote", upvote_path, method: :post, class: "btn btn-primary" %> </td>

          <% end %>
        </tr>
      </tbody>
    </table>
  </section>

