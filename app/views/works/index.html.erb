
<main>
  <h2>List of Works</h2>
  <section class="media-table">

<%['movie', 'book', 'album'].each do |category| %>
<h4><%="#{category.upcase}"%>S </h4>
<table class="table">
  <thead>
  <tr>
    <th width="80">Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th width="100">Published</th>
    <th width="100">Upvote</th>
  </tr>

  <% @works.each do |work| %>
  <tr>
    <%if category == work.category%>
    <td><%= work.votes.count %></td>
    <td><%=link_to work.title, work_path(work.id) %></td>
    <td><%=work.creator%></td>
    <td><%=work.publication_year%></td>
    <td><%= link_to "Upvote", upvote_path(work.id), method: :post, class: "btn btn-primary" %></td>
    <%end%>
    <%end%>
  </tr>
</table>
<%end%>

<a class="btn btn-secondary" href="/">View top media</a>
<a class="btn btn-primary" href="/works/new">Add a new work</a>

  </main>
