<h1>List of Works</h1>

<p>Album</p>
<table>
<tr><strong><td>Votes</td><td>Title</td><td>Created by</td><td>Published</td><td>Upvote</td></strong></tr>
<% @albums.each do |album|%>
  <tr>
   <td><%= album.votes.length %></td>
   <td><%= link_to "#{album.title}", work_path(album.id) %></td>
   <td><%= album.creator %></td>
   <td><%= album.publication_year %></td>
  </tr>
<%end%>
</table>


