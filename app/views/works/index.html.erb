<article>
  <h1>List of Works</h1>
</article>

<article>
  <h2>Albums</h2>
  <section>
    <ul>
        <% @works.each do |work| %>
          <% if work.category == "album" %>
            <li><%= link_to work.title, work_path(work.id) %></li>
          <% end %>
        <% end %>
    </ul>
  </section>
</article>

