


<h2>List of Works</h2>

<section class = "media-table">
  <h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>

    <tbody>

      <tr>
        <% @all_albums.each do |album| %>
        <td><%= album.votes.count %></td>
        <td><%= album.title %></td>
        <td><%= album.creator %></td>
        <td><%= album.publication_year %></td>
        <td><%= link_to "Upvote", upvote_work_path(album), method: :post %></td>
      </tr>
      <% end %>

    </tbody>
  </table>
</section>

