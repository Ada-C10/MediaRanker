<h2 class="headliner">List of Works</h2>
<section class="media-table">
  <h3>Albums</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Votes</th>
        <th scope="col">Title</th>
        <th scope="col">Created By</th>
        <th scope="col">Published</th>
        <th scope="col">Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |work| %>
      <tr>
        <td><%= work.votes_count %></td>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to "Upvote", work_upvote_path(work.id), method: :post, class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

