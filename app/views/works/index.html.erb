<article>
  <h2>Albums</h2>
  <section>
    <ul>
      <li>
        <% @works.each do |work| %>
          <% if work.category == "album" %>
            <%= work.title %><br>
          <% end %>
        <% end %>
      </li>
    </ul>
  </section>
</article>

