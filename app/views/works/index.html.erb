<h1>Media</h1>
<h3>Albums</h3>
<table>
<tr><td>Votes</td><td>Title</td><td>Created By</td><td>Published</td><td>Upvote</td></tr>
<% @album.each do |work| %>
<tr>
  <td><%= link_to "#{work.title}", work_path(work.id) %></td><td>
  <td><%=work.creator%></td>
  <td><%=work.publication_year%></td>
  <td><%= link_to "upvote", upvote_path(work.id), class: 'btn btn-primary' %></td><td>
</tr>
<% end %>
</table>

