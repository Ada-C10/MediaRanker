<section class = "all-works">
  <h2>List of Works</h2>

  <section>
    <% Work::WORK_CATEGORIES.each do |category| %>
    <h4 class="black-hdg"><%= category.capitalize%>s</h4>
    <table class="table">
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created by</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <!-- <% list = Work.where(category: category) %> -->
      <% list = Work.get_category_media(category) %>
      <% list.each do |work, info| %>
      <tbody>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to "#{work.title}", work_path(work.id) %></td>
          <td><%= work.creator %></td>
          <td><%= work.published_year %></td>
          <td>
            <button type="button" class="btn btn-info upvote-btn"><%=link_to "Upvote",work_votes_path(work.id), method: :post %></button>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <% end %>
  </section>
</section>
