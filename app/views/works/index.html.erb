<h2> List of Works </h2>


<% [[@albums, "Albums"], [@books, "Books"], [@movies, "Movies"]].each do |work, category| %>
<h4> <%=category %> </h4>

  <table class="table">
    <tr>
      <th> Votes </th>
      <th> Title </th>
      <th> Created By </th>
      <th> Published </th>
      <th> Upvote </th>
    </tr>
  <% work.each do |work| %>
    <tr>
      <td>
        <%= work.votes.count %>
      </td>
      <td>
        <%= link_to "#{work.title}", work_path(work.id) %>
      </td>
      <td>
        <%= work.creator %>
      </td>
      <td>
        <%= work.published.to_s %>
      </td>
      <td>
          <p> <%= link_to "Upvote", work_votes_path(work.id), method: :post, class: "btn btn-primary" %></p>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>

<%= link_to "View top media", works_path, class: "btn btn-secondary" %>
<%= link_to "Add a new work", new_work_path, class: "btn btn-info" %>
