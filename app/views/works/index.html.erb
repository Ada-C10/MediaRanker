<h1> List of Works </h1>
<h2> Albums </h2>

<table>
  <tr>
    <th> Votes </th>
    <th> Title </th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td>
      <%= book.votes.count %>
    </td>
    <td>
      <%= link_to "#{book.title}", work_path(book.id) %>
    </td>
  </tr>
<% end %>

</table>

