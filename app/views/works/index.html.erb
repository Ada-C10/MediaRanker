<section class = "all-works">
  <h2>List of Works</h2>

  <section>
    <% Work::WORK_CATEGORIES.each do |category| %>
    <h4><%= category.capitalize%>s</h4>
    <table class="table">
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created by</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <% list = Work.where(category: category) %>
      <% list.each do |work, info| %>
      <tbody>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to "#{work.title}", work_path(work.id) %></td>
          <td><%= work.creator %></td>
          <td><%= work.published_year %></td>
          <td>
            <button type="button" class="btn btn-info upvote-btn">Upvote</button>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <% end %>
  </section>
</section>
