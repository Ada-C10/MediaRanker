 </section>
 <h2>List of Works</h2>

 <section class="media-table">
   <h4>Albums</h4>
   <table class="table">
     <thead>
       <tr>
         <th scope="col" width>Votes</th>
         <th scope="col" >Title</th>
         <th scope="col" >Created By</th>
         <th scope="col" width>Published</th>
         <th scope="col" width>Upvote</th>
       </tr>
     </thead>

     <tbody>
       <% @works.each do |work| %>
       <% if work.category == 'album' %>
       <% votes = @votes.find_votes_by_work(work.id) %>
       <tr>
         <td><%= "#{votes.length}"%></td>
         <td><%=link_to "#{work.title}", work_path(work)%></td>
         <td><%= work.creator%></td>
         <td><%= work.publication_year%></td>
         <td><%= link_to 'UpVote', work_votes_path(work), method: :post, class: "btn btn-primary" %></td>
       </tr>
       <%end%>
       <%end%>
     </tbody>
   </table>
 </section>

