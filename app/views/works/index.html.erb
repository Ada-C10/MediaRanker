


<h1>Works index page</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Votes</th>
      <th scope="col">Title</th>
      <th scope="col">Created By</th>
      <th scope="col">Published</th>
      <th scope="col">Upvote</th>
    </tr>
  </thead>
  <tbody>

    <% @albums.each do |album| %>
    <tr>
    <th scope="row"><%= "#{album.total_votes}"%></th>
    <td><%= link_to "(#{album.title})", work_path(album.id) %></td>
    <td><%= "#{album.creator}"%></td>
    <td><%= "#{album.publication_year}"%></td>
    <td><%= link_to "Upvote", upvote_work_path(album.id), method: :post, class: "btn btn-outline-info"
 %></td>
    <p>
    <% end %>
  </tr>
</tbody>
  </table>
