<h1>List of Works</h1>
Albums
   <br />
   <% @albums.each do |album| %>
   <table>
      <tr>
         <td>Title: <%= album.title %></td>
         <td>Created by: <%= album.creator %></td>
         <td>Published: <%= album.publication_year %></td>
         <% end %>
      </tr>

Books
      <br />
      <% @books.each do |book| %>

      <tr>
         <td>Title: <%= link_to book.title, work_path(book.id) %> </td>
         <td>Created by: <%= book.creator %></td>
         <td>Published: <%= book.publication_year %></td>
         <% end %>
      </tr>



Movies
      <br />
      <% @movies.each do |movie| %>
      <tr>
         <td>Title: <%= link_to movie.title, work_path(movie.id) %></td>
         <% raise %>
         <td>Created by: <%= movie.creator %></td>
         <td>Published: <%= movie.publication_year %></td>
         <% end %>
      </tr>

</table>
