<h2> List of Works </h2>



<table class="table">
  <h4> Books </h4>
  <thead>
    <tr>
      <th> Title </th>
      <th> Creator </th>
      <th> Published Year </th>
      <th> Upvote </th>
    </tr>
  </thead>
  <tbody>
<tr> <% @books.each do |work| %>
  <td><%= link_to "#{work.title}", work_path(work.id) %></td>
  <td> <%=  work.creator %></td>
  <td> <%=  work.publication_year %> </td>
  <td><%= link_to "Upvote", upvote_path(work.id), method: :post, class: 'btn btn primary'%></td>
 </tr>
</tbody>
<% end %>


