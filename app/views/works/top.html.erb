<section class="top-ten-container">
  <section class="top-ten-list-container tenmovies">
    <h2 class="top-ten-header">Top Movies</h2>
    <ul class="list-group top-ten__list">
      <% @movies.each do |movie| %>
        <li class="list-group-item">
        <h4><%= link_to "#{movie.title}", work_path(movie.id), class: "top_title"%> 
        <small class="top_ten__creator">by</small>
        <%= movie.creator %>
        </h4>
        <p class="vote_num"><%= movie.votes_count %></p>
        <% end %>
    </ul>
  </section>

  <section class="top-ten-list-container tenbooks">
    <h2 class="top-ten-header">Top Books</h2>
    <ul class="list-group top-ten__list">
      <% @books.each do |book| %>
        <li class="list-group-item">
        <h4><%= link_to "#{book.title}", work_path(book.id), class: "top_title" %> 
        <small class="top_ten__creator">by</small>
        <%= book.creator %>
        </h4>
        <p><%= book.votes_count %></p>
        <% end %>
    </ul>
  </section>

  <section class="top-ten-list-container tenalbums">
    <h2 class="top-ten-header">Top Albums</h2>
    <ul class="list-group top-ten__list">
      <% @albums.each do |album| %>
        <li class="list-group-item">
        <h4><%= link_to "#{album.title}", work_path(album.id), class: "top_title" %> 
        <small class="top_ten__creator">by</small>
        <%= album.creator %>
        </h4>
        <p><%= album.votes_count %></p>
        <% end %>
    </ul>
  </section>
</section>
