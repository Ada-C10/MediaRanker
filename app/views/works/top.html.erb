            <p>by <%= work.creator%></p>
            <p><%=work.votes_count%> votes</p>
            <%end%>
          </li>
        </ul>
        <%end%>
      </section>


      <section>
        <h2>Top Albums</h2>
        <% @works.each do |work| %>
