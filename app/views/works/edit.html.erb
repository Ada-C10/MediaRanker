<%= form_with model: @work do |f|%>

  <p>Edit Work</p>

  <%= f.label :category, "Category" %>
  <%= f.select :category, ["Album", "Book", "Movie"] %>


  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>


  <%= f.label :published_year %>
  <%= f.text_field :published_year %>

  <%= f.label :description %>
  <%= f.text_field :description, size: "60x12" %>


  <%= f.submit "Update Work", class: "button" %>

<% end %>
