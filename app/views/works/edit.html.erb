<section class = "main-content">

<h2 class="main-content-header"><%= @work.title %></h2>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication %></p>
<p><%= @work.description %></p>

<%= render partial: "layouts/form",
      locals: { action_name: 'Edit work',
                this_model: @work,
                title_placeholder: @work.title,
                creator_placeholder: @work.creator,
                description_placeholder: @work.description,
                selected_category: @work.category,
                publication_placeholder: @work.publication,
                button_title: 'Save Your Edits!' } %>

</section>
