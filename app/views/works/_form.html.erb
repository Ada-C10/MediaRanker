<%= form_with model: @work do |f| %>
  <h1> <%= form_intro %> </h1>
  <%= f.label :category %>
  <%= f.select :category, ["book", "album", "movie"] %>

  <%= f.label :title  %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :published %>
  <%= f.text_field :published %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name %>

<% end %>
