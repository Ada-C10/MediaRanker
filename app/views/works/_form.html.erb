<%= form_with model: @work do |f| %>
  <h2> <%= form_intro %> </h2>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, ["book", "album", "movie"], {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :creator %>
    <%= f.text_field :creator, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :published %>
    <%= f.text_field :published, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <%= f.submit action_name, class: "btn btn-primary"%>

<% end %>
