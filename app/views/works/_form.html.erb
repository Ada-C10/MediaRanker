<%= form_with(model: work, local: true) do |form| %>

  <%= render partial: '/layouts/form_errors', locals: { err_hash: @work } %>

  <form>
    <section class="new-form">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :creator %>
      <%= form.text_field :creator, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :category %>
      <%= form.select :category, [["Album", "album"], ["Book", "book"], ["Movie", "movie"]], {}, {class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= form.label :publication_year %>
      <%= form.text_field :publication_year, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit :Submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
  </section>
</form>