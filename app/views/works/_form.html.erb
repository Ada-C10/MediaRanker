<h1> <%= action_name %> </h1>

<%= form_with model: @work, class: "work-form"  do |f|%>
  <p>Please provide the following information to save your media to our database:</p>
  <%= f.label :category %>
  <!-- Make this a drop down  -->
  <%= f.text_field :category %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %> 

  <section class="description-section">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </section>

  <%= f.submit button_title, class: "book-button" %>
<% end %>
