<section class="works-form">
  <header class="works_header">
      <h1 class="works_title"><%= action_name %></h1>
  </header>

  <section class="form">
    <% if @work.errors.any? %>
      <ul class="errors">
        <% @work.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong><%= message %>
        </li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @work, class: "form" do |f|%>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: :name, class: "form__input"%>

        <%= f.label :vin %>
        <%= f.text_field :vin, placeholder: :vin, class: "form__input"%>

        <%= f.label :image_url %>
        <%= f.text_field :image_url, placeholder: :image_url, class: "form__input" %>

      <%= f.submit button_title, class: 'btn'%>
    <% end %>
  </section>
</section>
