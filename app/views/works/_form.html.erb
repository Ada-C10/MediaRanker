<%= form_with model: @work do |f| %>

<div class="form-group">
  <%= f.label :title%>
  <div class="col-md-8" >
    <%= f.text_field :title, class: "form-control"%>
  </div>
</div>

<div class="form-group">
  <%= f.label :category %>
  <div class="col-md-8">
    <%= f.select(:category, options_for_select([['Movie', 'movie'], ['Album', 'album'], ['Book', 'book']]))%>

  </div>
</div>

<div class="form-group">
  <%= f.label :creator%>
  <div class="col-md-8">
    <%= f.text_field :creator, class: "form-control"%>
  </div>
</div>

<div class="form-group">
  <%= f.label "Publication year"%>
  <div class="col-md-8">
    <%= f.text_field :pub_year, class: "form-control"%>
  </div>
</div>

<div class="form-group">
  <%= f.label :description%>
  <div class="col-md-8">
    <%= f.text_area :description, class: "form-control"%>
  </div>
</div>
<br />

<button type="submit" class="btn btn-primary">  <%= action_button%> </button>

<% end %>
