<%= form_with model: @work do |form| %>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, ['album', 'book', 'movie'] %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :creator %>
    <%= form.text_field :creator %>
  </div>

  <div class="form-group">
    <%= form.label :publication_year %>
    <%= form.text_field :publication_year %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
