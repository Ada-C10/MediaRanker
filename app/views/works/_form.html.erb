<%= render partial: 'layouts/form_errors',
locals: {
  model: @work
}
%>

<%= form_with model: @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, ['book', 'album', 'movie'] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save" %>
<% end %>
