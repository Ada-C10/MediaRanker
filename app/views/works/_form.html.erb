<h1> <%= action_name %> </h1>

<%= form_with model: @work, class: "work-form"  do |f|%>
  <p>Please provide the following information to save to our database:</p>

  <%= f.label :category %>
  <%= f.select :category,[['movie','movie'], ['book','book'],['album','album']] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit button_title, class: "work-button" %>
<% end %>
