<h1> <%= action_name %> </h1>

<% if @work.errors.any? %>

  <ul>
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work do |f|%>
  <p>Please provide the following information:</p>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :category %>
  <%= f.select :category, ["album", "book", "movie"] %>


  <%= f.submit %>
<% end %>
