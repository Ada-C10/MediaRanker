<!-- form_for outdated -->
<h1><%=title%></h1>

<!-- this outputs errors to user plus the file to config initializer action view -->
<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<div>
<%= form_with model: @work, class: "driver-form" do |f|%>
  <%= f.label :category %>
  <!-- Q. why do we need two of the same  -->
  <%= f.select :category,[['album','album'], ['book','book'],['movie','movie']] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.submit%>
<% end %>
</div>
