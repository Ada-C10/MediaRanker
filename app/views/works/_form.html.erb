
<%= form_with model: @work do |f| %>
  <% if @work.errors.any?%>
  <h5>Errors:</h5>

  <ul>
    <% @work.errors.each do |column, message| %>
    <li>
      <strong><%=column.capitalize%>: </strong><%= message%>
    </li>
    <%end%>
  </ul>
  <% end %>


<div>

  <%= f.label :category %><br>
  <%= f.text_field :category %>
  <br>
  <br>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :creator %><br>
  <%= f.text_field :creator %>
  <br>
  <br>
  <%= f.label :publication_year %><br>
  <%= f.text_field :publication_year %>
  <br>
  <br>
  <%= f.label :description %><br>
  <%= f.text_field :description %>

</div>

<%= f.submit action_name %>

<% end %>
