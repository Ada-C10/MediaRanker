<%= form_with model: @work do |form| %>
  <div class="form-group">
    <%= form.select :category, ['Movie', 'Book', 'Album']%>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :creator %>
    <%= form.text_field :created_by %>
  </div>

  <div class="form-group">
    <%= form.label :publication_year %>
    <%= form.text_field :year_published %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="form-group">
    <%= form.submit action_button, class: "btn btn-primary" %>
  </div>
<% end %>
