<%= render partial: 'work_form',
locals: {
  model: @work
}
%>

<%= form_with model: @work, class: 'work-form' do |f| %>

<h3><%= form_title %></h3>

<div class="work-form">
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :category %>
  <%= f.select :category, Work::CATEGORIES %>
  <%= f.submit action_type, class: "work btn" %>
  <% end %>
</div>
