<%= render partial: 'layouts/form_errors',
locals: {
  model: @work
}
%>

<%= form_with model: @work, class: 'work-form' do |f| %>

<h3><%= form_title %></h3>

<%= f.label :title %>
<%= f.text_field :title %>
<br>

<%= f.label :category %>
<%= f.select :category, ['album', 'movie', 'book'] %>
<br>


<%= f.label :creator %>
<%= f.text_field :creator %>
<br>

<%= f.label :publication_year %>
<%= f.text_field :publication_year %>
<br>


<%= f.label :description %>
<%= f.text_field :description %>
<br>


<%= f.submit action_type, class: "work-form-submit-button" %>

<% end %>
