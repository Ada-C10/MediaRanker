<%= form_with model: @work, class: 'form' do |f| %>
  <h2><%= form_title %></h2>

  <%= f.label :category %>
  <%= f.select :category, %w[album book movie] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_type, class: 'submit' %>
<% end %>
