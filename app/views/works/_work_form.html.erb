<%= form_with model: @work, class: 'work-form' do |f| %>

  <h3><%= form_title %></h3>

  <p>

    <%= f.label :category %>:
    <%= f.select(:category, ['movie', 'album', 'book']) %>

  </p>
  
<p><%= f.label :title %>
  <%= f.text_field :title %>
</p>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>
<p>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>
</p>
  <%= f.submit action_type, class: "work-form-submit-button" %>

<% end %>
