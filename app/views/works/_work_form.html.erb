<% if @work.errors.messages.any? %>
  <section class="form-errors">
    <h3>There were some problems. Please fix them.</h3>
    <ul>
      <% @work.errors.messages.each do |field, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <strong><%= field %></strong>
            <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: @work, class: 'form' do |f| %>
  <h2><%= form_title %></h2>

  <%= f.label :category %>
  <%= f.select :category, %w[album book movie] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_type, class: 'submit' %>
<% end %>
