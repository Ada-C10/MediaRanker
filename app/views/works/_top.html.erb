<section class="top-ten-container col-4">
  <section class="top-ten-list-container ">
    <h2 class="top-ten-header">Top <%=cat.pluralize.capitalize %></h2>
    <ul class="list-group top-ten__list">
      <% if cat_list.empty? %>
        <h4>No <%=cat.pluralize%> have been added to the database.</h4>
      <% else %>
        <% cat_list.each do |item| %>
          <li class="list-group-item">
            <h4><%= link_to "#{item.title}", work_path(item.id), class: "top_title" %>
              <small class="top_ten__creator">by</small>
              <%= item.creator %>
            </h4>
            <p class="vote_num"><%= pluralize item.votes_count, "vote" %></p></li>
        <% end %>
      <% end %>
    </ul>
  </section>
</section>
