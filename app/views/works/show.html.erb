<div class="show-page">
  <h2 class="headliner">
    <strong><%= @work.title %></strong>
  </h2>

  <p> Created By: <%= @work.creator %> </p>
  <p> Published: <%= @work.publication_year %> </p>
  <p> Description: <%= @work.description %> </p>

  <%= link_to "Edit", edit_work_path(@work), class: "btn btn-info" %>
  <%= link_to "Upvote", work_upvote_path(@work), method: :post, class: "btn btn-primary" %>
  <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Are you sure you want to delete this entry #{@work.title}?" }, class: "btn btn-danger" %>

  <h2 class="votes">
    <strong><%= @work.votes_count %> votes for this <%= @work.category.capitalize %></strong>
  </h2>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">User</th>
        <th scope="col">Date</th>
      </tr>
    </thead>

    <tbody>
      <% @work.users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.created_at.strftime("%b %d, %Y") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  </div>
