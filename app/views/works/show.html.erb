<div class="show-page">
  <h2 class="headliner">
    <strong><%= @work.title %></strong>
  </h2>

  <p> Created By: <%= @work.creator %> </p>
  <p> Published: <%= @work.publication_year %> </p>
  <p> Description: <%= @work.description %> </p>

  <%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-info" %>
  <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Are you sure you want to delete this entry #{@work.title}?" }, class: "btn btn-danger" %>

  <h2 class="votes">
    <strong>Votes for this <%= @work.category.capitalize %></strong>
  </h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">User</th>
        <th scope="col">Date</th>
      </tr>
    </thead>

  </div>
