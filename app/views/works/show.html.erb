<h2><%= @work.title %> </h2>

<p> Created by: <%= @work.creator %> </p>

<p> Published: <%= @work.pub_year %> </p>

<p> <%= @work.description %> </p>


<div class="button-list">
  <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
  <%= link_to "Edit", edit_work_path, class: "btn btn-primary" %>
  <%= link_to "Upvote", upvote_work_path, class: "btn btn-primary", method: :post %>
  <%= link_to "Delete", work_path, class: "btn btn-primary", method: :delete %>
</div>

<h3> <%= @work.votes.length %> votes for this <%= @work.category %> </h3>



<table class="table">

  <tr>
    <th>User</th>
    <th>Date</th>
  </tr>

  <% @work.votes.each do |vote| %>
    <tr>
      <td>
        <%= link_to user_path(vote.user.id) do %>
          <%= vote.user.name %>
        <% end %>
      </td>
      <td>
        <%= vote.created_at %> </td>
    </tr>
  <% end %>

</table>
