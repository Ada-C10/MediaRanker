<section class = "work-details">
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.published_year %></p>
  <p><%= @work.description%></p>
  <p>
    <button type="button" class="btn btn-info">
        <%= link_to "Back to media ranks", root_path %>
    </button>
    <button type="button" class="btn btn-info">
      <%= link_to "Edit", edit_work_path %></button>
    <button type="button" class="btn btn-info">Upvote</button>
    <button type="button" class="btn btn-danger">
      <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure you want to delete this item?"} %>
    </button>
  </p>
</section>
