<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section>
      <%= link_to 'Back to media ranks', root_path, class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_work_path(@work), class: 'btn btn-primary' %>
      <!-- <%= link_to 'Upvote', work_vote_path(@work), method: :create %> -->
      <%= link_to 'Upvote', work_vote_path(:work_id => @work), method: :post, class: 'btn btn-primary' %>
      <%= link_to 'Delete', work_path(@work), method: :delete, data: { confirm: "Are you sure you want to delete: #{@work.title}?" }, class: 'btn btn-danger' %>
    </section>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= @work.count_votes %> votes for this <%= @work.category %></h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
        <tr>
          <td><%= link_to vote.user.username, user_path(vote.user.id) %></td>
          <td><%= vote.created_at %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>

</main>
