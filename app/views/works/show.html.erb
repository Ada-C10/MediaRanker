<section class="individual-work">
  <h1><%= @work.title %></h1>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= "#{@work.publication_year}" %> </p>
  <p><%= @work.description %></p>

  <p class="button">Back to Media Ranks</p>
  <p class="button">Edit</p>
  <p class="button">Upvote</p>
  <p class="button">Delete</p>

  <h1><%= "#{@work.votes.count}" %> Votes for this Book</h1>
  <table class="show-table">
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
    <tbody>
      <% @work.votes.each do |vote| %>
        <tr>
          <td><%= User.find_by(id: vote.user_id).name %></td>
          <td><%= vote.date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</section>
