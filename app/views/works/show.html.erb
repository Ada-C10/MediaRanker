<section>
  <h2><%= link_to @work.title, work_path(@work.id)  %></h2>
  <p><%= @work.creator %></p>
  <p><% @work.publication_year %></p>
  <p><%= @work.description %></p>
  <section>
    <li class="btn btn-primary"><%=link_to "View top media", root_path%></li>
    <li class="btn btn-primary"><%= link_to "Edit", edit_work_path(@work.id)%></li>
    <a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/25/upvote">Upvote</a>
    <%#= if %>
    <li class="btn btn-danger"><%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Please confirm you would like to be deleted as a driver"} %>
  </section>
</section>
