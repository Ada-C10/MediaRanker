<h2><%= @work.title %></h2>
<ul>
  <li>Created by: <%= @work.creator %></li>
  <li>Published: <%= @work.publication_year %></li>
  <li><%= @work.description %></li>
</ul>
<ul>
  <li><%= link_to 'Back to media ranks', root_path %></li>
  <li><%= link_to 'Edit', edit_work_path(@work.id) %></li>
  <li><%= link_to 'Upvote', upvote_path(@work.id) %></li>
  <li><%= link_to 'Delete', work_path(@work.id), method: :delete, data: { confirm: "Are you sure you want to delete #{@work.title}?" } %></li>
</ul>

<h3><%= @work.votes.count %> Votes for this <%= @work.category %></h3>
<table>
  <tr>
    <th>User</th>
    <th>Date</th>
  </tr>
  <% @work.votes.each do |vote| %>
<tr>
  <td>
    <%= link_to user_path(vote.user.id) do %>
    <%= vote.user.name %>
    <% end %>
  </td>
  <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
</tr>
<% end %>
</table>
