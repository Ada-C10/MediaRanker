<section class="individual-work">
  <h1><%= @work.title %></h1>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= "#{@work.publication_year}" %> </p>
  <p><%= @work.description %></p>

  <p class="button"><%= link_to "Back to Media Ranks", root_path %></p>
  <p class="button"><%= link_to "Edit", edit_work_path(@work.id) %></p>
  <p class="button"><%= link_to "Upvote", upvote_path(@work.id) %></p>
  <p class="button"><%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"} %></p>

  <h1><%= "#{@work.votes.count}" %> Votes for this <%= @work.category.capitalize %></h1>
  <table class="show-table">
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
    <tbody>
      <%= render partial: "votelist", collection: @work.votes %>
    </tbody>
  </table>
</section>
