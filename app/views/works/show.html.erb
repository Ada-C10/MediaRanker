<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>
</section>

<section>
  <%= link_to "Back to Media Ranks", root_path, class: "btn btn-primary", role: "button" %>
  <%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-primary", role: "button" %>
  <!-- TODO: Add upvote functionality -->
  <%= link_to "Upvote", work_path(@work.id), class: "btn btn-primary", role: "button" %>
  <%= link_to "Delete", work_path(@work.id), class: "btn btn-danger", role: "button", method: :delete,
      data: { confirm: 'Are you sure?'} %>
</section>

