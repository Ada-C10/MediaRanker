<h1>Total votes for this <%@work.category%></h1>



<section>
  <h5>User</h5>
  <h5>Date</h5>

  <table class="list-of-data">
    <tr class="table-header details">
      <td>User</td>
      <td>Date</td>
    </tr>

    <% @works.each do |work| %>
      <tr class="details">
        <td><%= link_to "#{work.user}", work_path(work.id) %></td>
        <td><%# link_to "#{work.vote.date}", work_path(work.id) %></td>
      </tr>
    <% end %>
  </table>
</section>
