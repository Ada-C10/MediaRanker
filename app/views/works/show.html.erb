
<section class="main_work_container">
  <h2><%= "#{@work.title}" %></h2>
  <p>
    <%= "Created by: #{@work.creator}" %>
  </p>
  <p>
    <%= "Published: #{@work.publication_year}" %>
  </p>
  <p>
    <%= "#{@work.description}" %>
  </p>


  <section>
    <%= link_to "Home", welcome_index_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-primary"%>
    <%= link_to 'Upvote', upvote_path(@work.id), method: :put, class: 'btn btn-primary' %>
    <%= link_to "Delete", work_path(@work.id), method: :delete, class: "btn btn-danger" %>
  </section>
</section>
<section class="work_votes_container">
  <h3>
  <%= "#{@work_votes.length} votes for this #{@work.category.capitalize}"  %>
</h3>
</section>
