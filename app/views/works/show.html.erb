
<section>
  <h2><%= link_to @work.title, work_path(@work.id)  %></h2>
  <p><%= @work.creator %></p>
  <p><% @work.publication_year %></p>
  <p><%= @work.description %></p>
  <section>
    <a class="btn btn-primary" href="/">Back to media ranks</a>
    <li class="btn btn-primary"><%= link_to "Edit", edit_work_path(@work.id)%></li>
    <a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/25/upvote">Upvote</a>
    <%#= if %>
    <a class="btn btn-danger" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/works/25">Delete</a>
  </section>
</section>
