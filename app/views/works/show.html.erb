<% if @work.nil? %>
  <h1><%= "404: NOT FOUND" %></h1>
<% else %>
<h1> <%= @work.title %></h1>
<ul>
  <li>Created by: <%= @work.creator %></li>
  <li>Published: <%= @work.publication_year%></li>
  <li> <%= @work.description%></li>
  <li>Votes: <ul>
            <% @work.votes.each do |vote|%>
                  <li>  <%= "#{vote.user.username}"%></li>
                    <%end%>
                  </ul>
                  </li>
</ul>
<ul>
<li><%= link_to "Edit", edit_work_path(@work.id)%></li>
<li><%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm:"Are you sure you want to delete?"} %></li>
</ul>
<%end%>
