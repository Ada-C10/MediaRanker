<h2><%= @work.title %></h2>
<h3><%= "Created by: #{@work.creator}" %></h3>
<h3><%= "Published: #{@work.published_year}" %></h3>
<p><%= @work.description %></p>

<%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %></div>
<%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-primary" %></div>
<%= link_to "Upvote", work_votes_path(@work.id), class: "btn btn-primary" %></div>
<%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Please confirm you would like to delete." }, class: "btn btn-danger"  %></div>



<table style="width:100%" class="table">
  <tr class="header_font">
    <th>User</th>
    <th>Date</th>
  </tr>
<% @work.votes.each do |vote| %>
  <tr>
    <td><%= pluralize(@work.votes.count, "votes") %></td>
    <td><%= link_to vote.user.username, user_path(vote.user) %></td>
    <td><%= vote.vote_time %></td>
  </tr>
<% end %>
</table>
