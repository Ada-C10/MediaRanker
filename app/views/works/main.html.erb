<main>
  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">
        Media Spotlight
      </span>
      <% spotlight = @works.sample%>
      <a class="spotlight_link-to" href="works/<%=spotlight.id%>"><%=spotlight.title%></a>
      by <%=spotlight.creator%></h2>
      <p class="spotlight__description"><%=spotlight.votes.count%> votes - <%=spotlight.description%></p>
    </section>
    <hr class="root__hr">
    <section class="top-ten__container">
      <%['movie', 'book', 'album'].each do |category|%>
      <section class="top-ten__list-container">
        <h2 class="top-ten__header">
          Top <%=category.capitalize%>s</h2>
          <ul class="list-group top-ten__list">
            <%@works = Work.sort_by_votes(category)%>
            <% @works.first(10).each do |work| %>
            <%if category == work.category%>
            <li class="list-group-item">
              <h4> <a href="/works/<%=work.id%>"><%=work.title%></a>
                <small class="top-ten__creator"> by <%=work.creator%></small>
              </h4>
              <p> <%=work.votes.count%> votes</p>
            </li>
            <%end%>
          </ul>
          <%end%>
        </section>
        <% end %>
      </section>
    </main>
