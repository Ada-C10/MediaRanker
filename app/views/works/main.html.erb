<main>
  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight:</span>
      <%= link_to @top_work.title, work_path(@top_work) %>
    </h2>
    <p class="spotlight__description">
      <%= @top_work.votes.count %> votes - <%= @top_work.description %>
    </p>

  </section>

<hr class="root__hr">

<section class="top-ten__container">
  <section class="top-ten__list-container">
  <h2 class="top-ten__header">Top Movies</h2>
  <ul class="list-group top-ten__list">
    <% @movies.first(10).each do |work| %>
      <li class="list-group-item">
        <h4>
          <%=link_to work.title, work_path(work.id) %>
          <small class="top-ten__creator">by <%= work.creator%></small>
        </h4>
        <p><%= work.votes.length %></p>
      </li>
       <%end%>
  </ul>
</section>

  <section class="top-ten__list-container">
  <h2 class="top-ten__header">Top Books</h2>
  <% @books.first(10).each do |work| %>
  <ul class="list-group top-ten__list">
      <li class="list-group-item">
        <h4>
          <%=link_to work.title, work_path(work.id) %>
          <small class="top-ten__creator">by <%= work.creator%></small>
        </h4>
        <p><%= work.votes.length %></p>
      </li>
      <%end%>
  </ul>
  </section>

  <section class="top-ten__list-container">
  <h2 class="top-ten__header">Top Albums</h2>
  <ul class="list-group top-ten__list">
      <% @albums.first(10).each do |work| %>
      <li class="list-group-item">
        <h4>
          <%=link_to work.title, work_path(work.id) %>
          <small class="top-ten__creator">by <%= work.creator%></small>
        </h4>
        <p><%= work.votes.length %></p>
      </li>
      <%end%>
  </ul>


  </section>
</section>


  </main>
