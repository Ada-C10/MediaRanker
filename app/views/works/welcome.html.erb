<section>
  <h2><%= "Media Spotlight: "%>
    <%= link_to "#{@spotlight.title}", work_path(@spotlight)%>
    <%= "by #{@spotlight.creator}" %>
  </h2>

  <p><%= "#{@spotlight.votes.count} votes - #{@spotlight.description}" %></p>
</section>


<section>
  <h2>Top Movies</h2>
  <ul>
    <% @movies.each do |work| %>
    <% if work.category == "movie" %>
    <li><%= link_to "#{work.title}", work_path(work.id)%></li>
    <li><%= "by #{work.creator}" %></li>
    <li><%= "#{work.votes.count} votes"%></li>
    <br>
    <br>
    <% end %>
    <% end %>
  </ul>
</section>

