<h1 class="headliner"> Log In </h1>

<div class='row'>
  <div class='col-sm-12'>
    <%= form_with method: :post, url: sessions_path do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-12">
        <%= f.label :user_name %>
        <%= f.text_field :user_name, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3">
        <%= f.submit class: 'btn btn-primary btn-md' %>
      </div>
    </div>
    <% end %>

  </div>
</div>
