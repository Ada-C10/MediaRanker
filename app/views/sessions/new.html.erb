<% if !@user.errors.empty? %>
  <%= render partial: "layouts/form_errors", locals: { model: @user, problem: "A problem occurred: Could not log in" } %>
<% end %>

<h1>Log In</h1>
<%= form_with model: @user, url: login_path, method: :post do |f| %>
  <%= f.label :name, "Username" %>
  <br />
  <%= f.text_field :name%>
  <br /><br />
  <%= f.submit "Login" %>
<% end %>
