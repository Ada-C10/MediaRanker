<section>
  <h2>
    Media Spotlight:
  </h2>
</section>

<h1> List of Works </h1>
<strong>
  Books
</strong>
<ul>
  <% @books[0..9].each do |book| %>
  <li>
    <%= link_to "#{book.title}  #{book.creator} #{book.publication_year} #{book.description}", work_path(book.id)%>
  </li>
  <% end %>
</ul>

