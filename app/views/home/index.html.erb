<section>
  <h2>
    Media Spotlight:
  </h2>
</section>

<h1> List of Works </h1>
<strong>
  Books
</strong>
<ul>

  <% @works.each do |work| %>
  <% if work.category == 'book' %>

  <li>
    <%= work.category %>
    <%= work.title %>
    <%= work.creator %>
    <%= work.publication_year %>
    <%= work.description %>
  </li>
    <% end %>
  <% end %>
</ul>

