<% if Work.spotlight %>
  <section class="card">
    <div class="card-body">
      <h2 class="header card-title">
        Media Spotlight:
          <%= link_to Work.spotlight.title, work_path(Work.spotlight.id) %>
        by <%= Work.spotlight.creator %>
      </h2>
      <p class="description card-text">
        <%= Work.spotlight.votes.length %> votes - <%= Work.spotlight.description[0..20] %>...
      </p>
    </div>
  </section>
<% end %>

<hr>

<section>
  <section>
    <h2>Top Movies</h2>
    <ul class="list-group top-ten">
      <% Work.list_of("movie")[0..9].each do |movie| %>
        <li class="list-group-item">
          <h4>
            <%= link_to movie.title, work_path(movie.id) %>
          by <%= movie.creator %>
          </h4>
          <p>
            <%= movie.votes.length %> votes
          </p>
        </li>
      <% end %>
    </ul>
  </section>

  <section>
    <h2>Top Books</h2>
    <ul class="list-group top-ten">
      <% Work.list_of("book")[0..9].each do |book| %>
        <li class="list-group-item">
          <h4>
            <%= link_to book.title, work_path(book.id) %>
          by <%= book.creator %>
          </h4>
          <p>
            <%= book.votes.length %> votes
          </p>
        </li>
      <% end %>
    </ul>
  </section>

  <section>
    <h2>Top Albums</h2>
    <ul class="list-group top-ten">
      <% Work.list_of("album")[0..9].each do |album| %>
        <li class="list-group-item">
          <h4>
            <%= link_to album.title, work_path(album.id) %>
          by <%= album.creator %>
          </h4>
          <p>
            <%= album.votes.length %> votes
          </p>
        </li>
      <% end %>
    </ul>
  </section>
</section>
