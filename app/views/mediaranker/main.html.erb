<section class="spotlight">
  <h2 class="spotlight-header"> <span>Media Spotlight:
  <%= link_to @media_spotlight.title, work_path(@media_spotlight.id) %>
    by <%= @media_spotlight.creator %></span></h2>
  <p class="spotlight-description">
    <%= @media_spotlight.votes_count %> votes - <%= @media_spotlight.description %>
  </p>
</section>

<section class="top-ten-container">
  <section class="top-ten-list-container">
    <h2 class="top-ten-header">Top Movies</h2>
    <% @movies.each do |work| %>
    <ul class ="list-group top-ten-list">
      <li class="list-group-item">
        <h4><%= link_to work.title, work_path(work.id) %> <small class="top-ten-creator">by <%= work.creator %></small></h4>
        <p><%= work.votes_count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten-list-container">
    <h2 class="top-ten-header">Top Books</h2>
    <% @books.each do |work| %>
    <ul class ="list-group top-ten-list">
      <li class="list-group-item">
        <h4><%= link_to work.title, work_path(work.id) %> <small class="top-ten-creator">by <%= work.creator %></small></h4>
        <p><%= work.votes_count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten-list-container">
    <h2 class="top-ten-header">Top Albums</h2>
    <% @albums.each do |work| %>
    <ul class ="list-group top-ten-list">
      <li class="list-group-item">
        <h4><%= link_to work.title, work_path(work.id) %> <small class="top-ten-creator">by <%= work.creator %></small></h4>
        <p><%= work.votes_count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>
</section>
