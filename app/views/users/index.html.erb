<h2>List of Users (who mostly happen to also be Bros)</h2>
<table class="table">
  <thead>
    <tr>
      <th>Broname</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to "#{user.name}", user_path(user) %></td>
      <td><%= user.votes.length %></td>
      <td><%= user.created_at.strftime("%b, %d, %Y") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to the Bro List", root_path, class: 'btn btn-secondary' %>
