<% if @users.empty? %>
  <h1> There are no registered users. </h1>
<% else %>
<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  </thead>
    <tbody>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= link_to user.handle, user_path(user.id) %>
    </td>
    <td>
      <%= "#{user.votes.count}" %>
    </td>
    <td>
      <%= "#{user.created_at.strftime("%b. %d, %Y")}" %>
    </td>
  </tr>
  <% end %>
    </tbody>
  </table>
<% end %>
