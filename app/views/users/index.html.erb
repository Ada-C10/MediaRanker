<section class = "main-content">
  <h2 class="main-content-header">List of Users</h2>
<% if @users.size == 0 %>
<p><%= "No users yet!" %></p>
<% else %>
  <% @users.each do |user| %>
    <ul>
      <li><%= link_to user.name, user_path(user.id) %></li>
      <li><%= user.print_number_of_votes %></li>
      <li><%= (user.created_at).to_date.strftime("%b %d, %Y") %></li>
    </ul>
  <% end %>
<% end %>

<section class= "mt-5 d-flex justify-content-center">
  <%= link_to "Back to Top 10 (Home)", root_path, class: "btn btn-info m-2", role: "button" %>
</section>

</section>
