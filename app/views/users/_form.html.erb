

<% if @user.errors.any? %>
  <ul >
    <% @user.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, class: "user-form" do |f|%>

<p class="userform">Please change the following information to update the user:>
<%= f.label :name %>
<%= f.text_field :user_name %>


<%= f.submit button_title, class: "user-button" %>
<% end %></p>
