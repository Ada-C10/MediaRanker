<h2>User Summary: <%= @user.username %> </h2>
<p>
  Joined site
  <%= @user.created_at %>
</p>

<h2>Votes</h2>
<table class="table">
  <thead>
    <tr>
      <th class = "table_grid">Media Title</th>
      <th class = "table_grid">Created By</th>
      <th class = "table_grid">Published</th>
      <th class = "table_grid">Category</th>
      <th class = "table_grid">Voted On</th>
    </tr>
  </thead>
  <tbody>
  </tbody>

  <% works = @user.user_voted_works %>
  <% works.each do |work| %>
  <tr>
    <td><%= work.title %></td>
    <td><%= work.creator %></td>
    <td><%= work.publication_year %></td>
    <td><%= work.category %></td>
    <% vote = upvoted_works(@user.id) %>
    <td><%= vote.created_at.strftime("%b %d,%Y") %></td>
  </tr>
  <% end %>
</tbody>
</table>
<button type="button">
  <%= link_to "See all users", users_path %>
</button>
<button type="button">
  <%= link_to "Back to Media List", root_path %>
</button>
</article>
