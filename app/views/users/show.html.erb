<section class = "main-content">
  <h2 class="main-content-header">User Summary: <%= link_to @user.name, user_path(@user.id) %></h2>
<%= @user.created_at.to_date.strftime("Joined site %b %d, %Y") %>

<section class = "main-content">
<h3 class="pt-2">Votes</h3>
<% @votes.each do |vote| %>
  <% row = vote.user_votes_table_row %>
    <ul>
      <li><%= link_to row[0], work_path(row[5]) %></li>
      <li><%= row[1] %></li>
      <li><%= row[2] %></li>
      <li><%= row[3] %></li>
      <li><%= row[4].to_date.strftime("%m/%d/%Y") %></li>
    </ul>
  <% end %>
</ul>
</section>

<section class= "mt-5 d-flex justify-content-center">
  <%= link_to "See all Users", users_path, class: "btn btn-info m-2", role: "button" %>
  <%= link_to "Back to Top 10 (Home)", root_path, class: "btn btn-info m-2", role: "button" %>
</section>

</section>
