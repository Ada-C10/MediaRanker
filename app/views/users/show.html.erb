<main>
  <h2>User Summary: <%= @user.user_name %></h2>
  <p>Joined site <%= @user.created_at %></p>

  <section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @user.votes.each do |vote| %>
      <% works = Work.where(id: vote.work_id) %>
        <%works.each do |work| %>
        <tr>
          <td><%= link_to "#{work.title}", works_path(work.id) %></a></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= work.category %></td>
          <td><%= vote.created_at %></td>
        </tr>
        <%end%>
      <%end%>
    </tbody>
  </table>
