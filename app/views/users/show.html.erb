<% if @user.nil? %>
<h1> 404 Not found</h1>
<% else %>
<h2>User Summary: <%=@user[:name]%></h2>
<p>Joined site <%=@user[:join_date].strftime("%b %d, %Y")%></p>
<section class = "user-votes__container">
  <h3 class = "user-votes__header">Votes</h3>
  <table class = "table">
    <thead>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </thead>
    <tbody>
      <% @user.votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.work.title, work_path(vote.work.id) %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year %></td>
        <td><%= vote.work.category %></td>
        <td><%= vote.date %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%= link_to "See all Users", users_path, class: "btn btn-secondary" %>
<%= link_to "Back to Media List", root_path, class: "btn btn-primary" %>
<% end %>
