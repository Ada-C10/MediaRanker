<% if @user.nil? %>
  <h2> 404 Not found</h2>
<% else %>
  <h2>User Summery:<%= @user.username %></h2>
  <p>Joined site: <%= @user.created_at %></p>

  <section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
        <% @user.votes.each do |vote| %>
        <tr>
            <td><%= link_to "#{vote.work.title}", work_path(vote.work.id)  %></td>
            <td><%= vote.work.creator %></td>
            <td><%= vote.work.publication_year %></td>
            <td><%= vote.work.category %></td>
            <td><%= vote.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<a class="btn btn-secondary" href="/users">See all Users</a>
<a class="btn btn-primary" href="/">Back to Media List</a>
<% end %>
