<section class = "main-content">
  <h2 class="main-content-header">User Summary: <%= link_to @user.name, user_path(@user.id) %></h2>
<%= @user.created_at.to_date.strftime("Joined site %b %d, %Y") %>

<section class = "main-content">
<h3 class="pt-2">Votes</h3>

  <table class="table table-sm">
    <thead>
      <tr class="d-flex">
        <th class="col-4">Media Title</th>
        <th class="col-2">Created By</th>
        <th class="col-2">Published</th>
        <th class="col-2">Category</th>
        <th class="col-2">Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @votes.each do |vote| %>
        <% row = vote.user_votes_table_row %>
        <!-- Find me in the User model -->
          <tr class="d-flex">
            <td class="col-4"><%= link_to row[0], work_path(row[5]), class: "text-info" %></td>
            <td class="col-2"><%= row[1] %></td>
            <td class="col-2"><%= row[2] %></td>
            <td class="col-2"><%= row[3] %></td>
            <td class="col-2"><%= row[4].to_date.strftime("%m/%d/%Y") %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section class= "mt-5 d-flex justify-content-center">
  <%= link_to "See all Users", users_path, class: "btn btn-info m-2", role: "button" %>
  <%= link_to "Back to Top 10 (Home)", root_path, class: "btn btn-info m-2", role: "button" %>
</section>

</section>
