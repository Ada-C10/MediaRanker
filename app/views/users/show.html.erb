<section class="flash">
  <% flash.each do |name, message| %>
    <% if message.class == Array %>
      <div class="alert alert-warning">
        <% message.each do |msg| %>
          <p><strong><%= "#{name}:" %></strong><%= " #{msg}" %></p>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-<%= name %>">
        <%= message %>
      </div>
    <% end %>
  <% end %>
</section>

<section class="user-show">
<p>
  <strong>User Summary:</strong>
  <%= @user.name %>
</p>
  <p class="user-since"><%=@user.created_at.strftime("A contributing member since %B, %d, %Y") %></p>

<p>
  <strong>Works Voted on:</strong>
  <table class="user-votes-table table">
    <thead>
      <tr>
        <th class="h3">Title</th>
        <th class="h3">Created By</th>
        <th class="h3">Published</th>
        <th class="h3">Category</th>
        <th class="h3">Total Votes</th>
      </tr>
    </thead>
    <% @user.votes.each do |vote| %>
      <% work = Work.find(vote.work_id) %>
      <tr>
        <td><%= work.title %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= work.category %></td>
        <td><%= work.votes_count %></td>
      </tr>
    <% end %>
  </table>

</section>

<section class="user-btns ">
  <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-secondary" %> |
  <%= link_to 'Back', users_path,  class: "btn btn-secondary" %>
</section>