<h2>User Summary: <%= @user.name %></h2>

<p>
  Joined site <%= @user.created_at %>
</p>
<section>
  <strong>Votes</strong>
</section>
<section>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Media Title</th>
        <th scope="col">Created By</th>
        <th scope="col">Published</th>
        <th scope="col">Category</th>
        <th scope="col">Voted On</th>
      </tr>
    </thead>
    <tbody>
    <% @user.votes.each do |vote| %>
    <tr>
      <td scope="row"><%= Work.find_by(id: vote.work_id).title %></td>
      <td><%= Work.find_by(id: vote.work_id).created_at %></td>
      <td><%= Work.find_by(id: vote.work_id).publication_year %></td>
      <td><%= Work.find_by(id: vote.work_id).category %></td>
      <td><%= Work.find_by(id: vote.work_id).created_at %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</section>
