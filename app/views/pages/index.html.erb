
<h2>MEDIA SPOTLIGHT: <%= link_to @top_media.title, work_path(@top_media) %> by <%= @top_media.creator %></h2>
<p><%= @top_media.votes.count %> votes</p>


<section class = "all-media">
  <div class = "media-container">
    <h2>Top Books</h2>
    <ul>
      <% @top_books.each do |book| %>
      <li><%= link_to book.title, work_path(book) %> by <%= book.creator %></li>
      <li><%= book.votes.count %> votes</li>
      <br>
      <% end %>
    </ul>
  </div>

  <div class = "media-container">
    <h2>Top Movies</h2>
    <ul>
      <% @top_movies.each do |movie| %>
      <li><%= link_to movie.title, work_path(movie)%> by <%= movie.creator %></li>
      <li><%= movie.votes.count %> votes</li>
      <br>
      <% end %>
    </ul>
  </div>

  <div class = "media-container">
    <h2>Top Albums</h2>
    <ul>
        <% @top_albums.each do |album| %>
        <li><%= link_to album.title, work_path(album) %></li>
        <li><%= album.votes.count %> votes</li>
        <br>
        <% end %>
    </ul>
  </div>
</section>
