<section>
  <h3>Media Spotlight: <%= link_to Work.top_work.title, work_path(Work.top_work.id) %> by <%= Work.top_work.creator %></h3>

  <p><%= Work.top_work.votes.count %> votes - <%= Work.top_work.description %></p>
</section>

<section>
  <section>
    <h3>Top Albums</h3>
    <ul>
      <% Work.top_albums_list.each do |work| %>
      <li>
        <h4><%= link_to work.title, work_path(work.id) %>
          by <%=  work.creator  %>
        </h4>
        <p><%= work.votes.count%> votes</p>
      </li>
      <% end %>
    </ul>
  </section>

  <section>
    <h3>Top Books</h3>
    <ul>
      <% Work.top_books_list.each do |work| %>
      <li>
        <h4><%= link_to work.title, work_path(work.id) %>
          by <%=  work.creator  %>
        </h4>
        <p><%= work.votes.count%> votes</p>
      </li>
      <% end %>
    </ul>
  </section>

  <section>
    <h3>Top Movies</h3>
    <ul>
      <% Work.top_movies_list.each do |work| %>
      <li>
        <h4><%= link_to work.title, work_path(work.id) %>
          by <%=  work.creator  %>
        </h4>
        <p><%= work.votes.count%> votes</p>
      </li>
      <% end %>
    </ul>
  </section>
</section>
