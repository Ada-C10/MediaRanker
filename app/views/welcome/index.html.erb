
<section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight: </span>
      <%=link_to "#{@spotlight_work[0].title}", work_path(@spotlight_work[0]), class: "spotlight__link-to" %> by <%=@spotlight_work[0].creator%>
    </h2>
    <p class="spotlight__description">
      <%=@spotlight_work[0].votes.count%> votes - <%=@spotlight_work[0].description%>
    </p>
  </section>

<section class="top-ten__container">
  <section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Movies
  </h2>
  <ul class="list-group top-ten__list">
<%@top_ten_movies.each do |movie|%>
      <li class="list-group-item">
        <h4>
          <%=link_to "#{movie.title}", work_path(movie)%>
          <small class="top-ten__creator">by <%=movie.creator%></small>
        </h4>
        <p><%=movie.votes.count%> votes</p>
      </li>
      <%end%>
  </ul>
</section>

  <section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Books
  </h2>
  <ul class="list-group top-ten__list">
    <%@top_ten_books.each do |book|%>
      <li class="list-group-item">
        <h4>
          <%=link_to "#{book.title}", work_path(book)%>
          <small class="top-ten__creator">by <%=book.creator%></small>
        </h4>
        <p><%=book.votes.count%> votes</p>
      </li>
      <%end%>
  </ul>
</section>

<section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Albums
  </h2>
  <ul class="list-group top-ten__list">
    <%@top_ten_albums.each do |album|%>
    <li class="list-group-item">
      <h4>
        <%=link_to "#{album.title}", work_path(album)%>
        <small class="top-ten__creator">by <%=album.creator%></small>
      </h4>
      <p><%=album.votes.count%> votes</p>
    </li>
    <%end%>
  </ul>
</section>
</section>
