<section>
  <h2><%= @medium.title %></h2>
  <p>Created By: <%= @medium.creator %></p>
  <p>Published: <%= @medium.publication_year %></p>
  <p><%= @medium.description %></p>
</section>

<%= link_to "Delete", medium_path(@medium), method: :delete, data: { confirm: "Are you 1000% sure you want to delete the book #{@medium.title}?" } %>

<%= link_to "upvote", upvote_path(@medium), method: :post %>

<section>
  <h3><%= @medium.votes.length %> votes for this <%= @medium.category %></h3>
  <%= render partial: "vote_table", locals: { collection: @medium.votes } %>
</section>
